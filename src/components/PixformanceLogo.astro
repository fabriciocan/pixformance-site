---
interface Props {
  variant?: 'turquoise' | 'white' | 'black';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'black', size = 'md', class: className } = Astro.props;

const sizes = {
  sm: 'h-6',
  md: 'h-8',
  lg: 'h-12',
};

const logos = {
  turquoise: '/images/logo/logoTURQUOISE.png',
  white: '/images/logo/logoWHITE.png',
  black: '/images/logo/LogoBLACK.png',
};
---

<img
  src={logos[variant]}
  alt="Pixformance"
  class={`${sizes[size]} ${className || ''}`}
/>
