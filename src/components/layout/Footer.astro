---
/**
 * Footer Component - Pixformance
 * Simplified footer for Pixformance website
 */
import { cn } from '@/lib/cn';
import { footerVariants } from './footer.variants';

import PixformanceLogo from '@/components/PixformanceLogo.astro';

interface Props {
  variant?: 'default' | 'minimal';
  class?: string;
}

const { variant = 'default', class: className } = Astro.props;

const currentYear = new Date().getFullYear();

const footerClasses = cn(footerVariants({ variant }), className);

const navigationLinks = [
  { label: 'Physiotherapie', href: '/physiotherapie' },
  { label: 'Klinik', href: '/klinik' },
  { label: 'Fitness', href: '/fitness' },
  { label: 'BGM', href: '/bgm' },
];

const legalLinks = [
  { label: 'Impressum', href: '/impressum' },
  { label: 'Datenschutz', href: '/datenschutz' },
  { label: 'AGB', href: '/agb' },
];
---

<footer class={footerClasses}>
  <div class="container">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      {/* Company Info */}
      <div class="md:col-span-1">
        <PixformanceLogo variant="black" size="md" class="mb-4" />
        <p class="text-sm text-foreground-muted">
          Digitale Fitnessgeräte & Therapiegeräte
        </p>
      </div>

      {/* Navigation */}
      <div class="md:col-span-1">
        <h4 class="font-semibold mb-4">Lösungen</h4>
        <ul class="space-y-2">
          {
            navigationLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-foreground-muted hover:text-foreground transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Contact */}
      <div class="md:col-span-1">
        <h4 class="font-semibold mb-4">Kontakt</h4>
        <ul class="space-y-2 text-sm text-foreground-muted">
          <li>
            <a
              href="mailto:info@pixformance.com"
              class="hover:text-foreground transition-colors"
            >
              info@pixformance.com
            </a>
          </li>
          <li>
            <a href="tel:+49123456789" class="hover:text-foreground transition-colors">
              +49 (0) 123 456789
            </a>
          </li>
        </ul>
      </div>

      {/* Social & Legal */}
      <div class="md:col-span-1">
        <h4 class="font-semibold mb-4">Rechtliches</h4>
        <ul class="space-y-2">
          {
            legalLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-foreground-muted hover:text-foreground transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="border-t border-border mt-8 pt-8 text-center">
      <p class="text-sm text-foreground-muted">
        © {currentYear} Pixformance. Alle Rechte vorbehalten.
      </p>
    </div>
  </div>
</footer>
