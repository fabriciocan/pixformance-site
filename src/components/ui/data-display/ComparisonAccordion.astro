---
interface ComparisonItem {
  title: string;
  withPixformance: string;
  withoutPixformance: string;
}

interface Props {
  items: ComparisonItem[];
}

const { items } = Astro.props;
---

<div class="space-y-4">
  {
    items.map((item, index) => (
      <details class="group border border-border rounded-lg overflow-hidden">
        <summary class="cursor-pointer px-6 py-4 bg-background hover:bg-background-secondary transition-colors flex justify-between items-center">
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <svg
            class="w-5 h-5 transition-transform group-open:rotate-180"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"
            />
          </svg>
        </summary>
        <div class="px-6 py-4 border-t border-border bg-background-secondary/30">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Mit Pixformance */}
            <div>
              <div class="flex items-center gap-2 mb-3">
                <svg
                  class="w-5 h-5 text-success"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
                <h4 class="font-semibold text-success">MIT Pixformance</h4>
              </div>
              <p class="text-sm text-foreground-muted leading-relaxed">
                {item.withPixformance}
              </p>
            </div>
            {/* Ohne Pixformance */}
            <div>
              <div class="flex items-center gap-2 mb-3">
                <svg
                  class="w-5 h-5 text-error"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"
                  />
                </svg>
                <h4 class="font-semibold text-error">OHNE Pixformance</h4>
              </div>
              <p class="text-sm text-foreground-muted leading-relaxed">
                {item.withoutPixformance}
              </p>
            </div>
          </div>
        </div>
      </details>
    ))
  }
</div>
