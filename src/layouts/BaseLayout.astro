---
import '@/styles/global.css';
import ChatWidget from '@/components/ChatWidget.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Pixformance - Digitale Fitnessgeräte & Therapiegeräte',
  description = 'Mehr Umsatz. Mehr Entlastung.',
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script is:inline id="usercentrics-cmp" src="https://web.cmp.usercentrics.eu/ui/loader.js" data-settings-id="yk8ozPuvYY744O" async></script>
  </head>
  <body>
    <slot name="header" />
    <main><slot /></main>
    <slot name="footer" />
    <ChatWidget />
  </body>
</html>
