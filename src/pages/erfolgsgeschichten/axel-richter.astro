---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Der Selbstzahlerbereich als nachhaltiges Standbein - Axel-André Richter - Pixformance"
  description="Wie die Gesundheitspraxis Richter und Lopez in Mönchengladbach mit Pixformance ihren Selbstzahlerbereich als nachhaltiges Standbein im zweiten Gesundheitsmarkt aufgebaut hat."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#8B1E81]/10 to-[#6BDBD1]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="heart" size="sm" />
            Physiotherapie
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Chancen im zweiten Gesundheitsmarkt
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Der Selbstzahlerbereich als nachhaltiges Standbein – Gesundheitspraxis Richter &amp; Lopez, Mönchengladbach
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <p class="text-lg text-foreground-muted leading-relaxed mb-8">
          <strong class="text-foreground">Seit 1999 existiert die Gesundheitspraxis Richter &amp; Lopez in Mönchengladbach.</strong> Auf 230 qm bieten Physiotherapeut Axel-André Richter und sein Kollege Victor Lopez ihren Patienten weit mehr als klassische Physiotherapie – mit einem konsequenten Selbstzahlerbereich, der sie weitgehend unabhängig von der gesetzlichen Krankenversicherung macht.
        </p>

        <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
          <p class="text-foreground italic text-base md:text-lg">
            „Wir therapieren fernab von herkömmlicher Krankengymnastik, da die Physiotherapie sowohl die physikalische Therapie als auch physiotherapeutische Verfahren der Bewegungstherapie umfasst und schon lange über das Behandeln ‚Kranker' hinausgeht."
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/gesundheitspraxis-richter-und-lopez.jpg"
                alt="Gesundheitspraxis Richter und Lopez Mönchengladbach"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Axel-André Richter
              </h2>
              <p class="text-xl text-[#8B1E81] font-semibold">
                Physiotherapeut &amp; Praxisinhaber
              </p>
            </div>

            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="briefcase" size="md" class="text-[#8B1E81]" />
                Praxis Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Ort</p>
                    <p class="text-sm">Mönchengladbach, NRW, Deutschland</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">1999</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="home" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Praxisgröße</p>
                    <p class="text-sm">230 qm</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="activity" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Physiotherapie, Schmerztherapie, Bewegungslehre</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Mitarbeiterzahl</p>
                    <p class="text-sm">3 Therapeuten</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Weitere Infos</p>
                    <a
                      href="https://www.richterlopez.de"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-[#8B1E81] hover:underline"
                    >
                      www.richterlopez.de
                    </a>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Selbstbewusst in den Selbstzahlerbereich
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Den Selbstzahlerbereich haben Richter &amp; Lopez schon früh in die Praxis integriert. Angesichts zunehmend bürokratischer Anforderungen im Gesundheitswesen wollten sie möglichst unabhängig von der gesetzlichen Krankenversicherung agieren. Ihre Haltung dabei ist klar:
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                Entweder den Leuten ist es das wert, Geld für ihre Gesundheit in die Hand zu nehmen, dann bieten wir ihnen individuelle Lösungen und nehmen uns die Zeit – oder eben nicht.
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Seit 2009 bieten sie zudem eine neue Schmerztherapie nach Liebscher und Bracht an. Um das Angebot im Selbstzahlerbereich weiter auszubauen, entschieden sich Richter &amp; Lopez für das digitale Trainingskonzept von Pixformance.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Pixformance als ideale Ergänzung im Selbstzahlerbereich
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Bei der Schmerztherapie werden die Patienten zunehmend jünger. Da passt auch Pixformance gut mit rein, da es sowohl ältere als auch jüngere Leute ab 30 + anspricht. Bei den Patienten geht es dann nicht um kurzzeitige Wehwehchen, den Beach Body oder Wellness an sich, sondern um Menschen, die auf der Suche nach einem langfristigen, gesundheitsfördernden Training sind."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Für Richter stand dabei immer fest: Ein normales Gerätetraining, bei welchem nur einzelne Muskelgruppen trainiert werden, kommt nicht in Frage.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Die Patienten sitzen meist schon auf dem Weg zur Arbeit und bei der Arbeit, dann sollen sie nicht noch während der Trainingstherapie sitzen müssen."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Die Bandbreite des Pixformance-Trainingsangebots hat ihn überzeugt: über 200 funktionelle Ganzkörperübungen, individuell auf der Online-Plattform anpassbar nach Bedürfnissen und Gesundheitszustand.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Das Tolle ist, dass ich das neue Training ganz individuell für jeden unserer Patienten gestalten kann. Vom Leistungssportler bis zur Omi ist für jeden das Richtige dabei."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Durch das Live Feedback, die leicht einsehbaren Trainingsergebnisse und die Pixformance App wird man super unterstützt und kann immer nachvollziehen, wo man steht und was man bereits erreicht hat. Und wenn ich die Geräte neuen Leuten vorstelle, sind die direkt begeistert, da die Stationen auch einfach toll aussehen."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Vier Pixformance Stationen wurden in eine geräumige Trainingsfläche integriert – für Einzeltraining und Gruppenkurse gleichermassen geeignet.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Es gab bisher viel positive Rückmeldungen zu dem Training. Auch wenn Leistungssportler im ersten Moment etwas zögerlich sind, sind sie im Nachhinein überzeugt, wenn ich ihnen dann das passende Training zusammenstelle."
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-12">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Virtuell betreutes Training und Pandemie-Resilienz
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Die Möglichkeit des virtuell betreuten Trainings – auch ohne ständige 1-zu-1-Betreuung – ist für die Therapeuten der Praxis von großer Bedeutung. Richter trainiert selbst 2- bis 3-mal die Woche vor den Geräten.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Wenn mal ein Therapeut ausfällt, kann man das als Backup anbieten und mit Pixformance einfach kompensieren, sodass die Therapiesitzung nicht ausfallen muss."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Die Korrekturen in Echtzeit sind da eine tolle Unterstützung, um unsere Patienten auch ohne Personal immer sicher und verantwortungsvoll trainieren zu lassen."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Jetzt in Zeiten der Pandemie ist das Angebot über die Pixformance App auch sehr professionell. Bei den Leuten, denen wir das gezeigt haben, dass sie im Falle eines Falles ihr Training auch zuhause fortführen können, ist das sehr gut angekommen. Und wir müssen dann auch keine privaten Videos aufnehmen, um die Übungen mitzugeben."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Viele Patienten setzen dennoch auf den persönlichen Austausch vor Ort – was dank gut belüfteter Räume und kontaktlosem Training auch während der Pandemie möglich ist.
            </p>
          </div>
        </div>

        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Aus Patienten langfristige Kunden machen
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Mit der Schmerztherapie und dem 2020 integrierten Pixformance-Trainingskonzept haben Richter &amp; Lopez einen umfangreichen Selbstzahlerbereich aufgebaut und ihr Standbein im zweiten Gesundheitsmarkt nachhaltig gefestigt. Das Ziel war dabei immer: weitgehend unabhängig von gesetzlichen Verordnungen agieren und sich voll auf die Genesung der Patienten konzentrieren.
            </p>

            <p class="text-base md:text-lg">
              Die Erfahrung zeigt: Die Menschen, die sich dem Mehrwert der Therapie bewusst sind, sind auch bereit, als Selbstzahler zu investieren. Richter &amp; Lopez haben so ihre Patienten langfristig zu Kunden gewandelt und nachhaltig gebunden.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#8B1E81] via-[#4A3D91] to-[#02308C]"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#8B1E81]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#8B1E81] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#8B1E81] hover:bg-[#4A3D91] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
