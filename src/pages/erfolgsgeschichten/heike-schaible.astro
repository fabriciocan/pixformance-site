---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Selbstzahlerbereich erfolgreich aufbauen - Heike Schaible - Pixformance"
  description="Wie Heike Schaible mit ihrer Physiotherapie Praxis Raum für Gesundheit in Stuttgart Schritt für Schritt einen erfolgreichen Selbstzahlerbereich aufgebaut hat."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#8B1E81]/10 to-[#6BDBD1]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="heart" size="sm" />
            Physiotherapie
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Schritt für Schritt erfolgreich einen Selbstzahlerbereich aufbauen
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Physiotherapie Praxis „Raum für Gesundheit" aus Stuttgart
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <p class="text-lg text-foreground-muted leading-relaxed mb-8">
          <strong class="text-foreground">Vor über 30 Jahren als Massage- und Bäderpraxis gegründet, hat sich die Physiotherapie Praxis „Raum für Gesundheit" aus Stuttgart seitdem deutlich verändert und in ihren Angeboten weiterentwickelt.</strong> Auf insgesamt 400 qm Praxisfläche hat Inhaberin Heike Schaible mit ihren Kolleginnen und Kollegen eine Physiotherapie Praxis inklusive eines umfangreichen Selbstzahlerangebots erfolgreich aufgebaut.
        </p>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/heikeschaible.600x400.jpg"
                alt="Heike Schaible - Inhaberin der Physiotherapie Praxis Raum für Gesundheit"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Heike Schaible
              </h2>
              <p class="text-xl text-[#8B1E81] font-semibold">
                Inhaberin der Physiotherapie Praxis „Raum für Gesundheit"
              </p>
            </div>

            <!-- Praxis Info Card -->
            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="briefcase" size="md" class="text-[#8B1E81]" />
                Praxis Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Ort</p>
                    <p class="text-sm">Stuttgart, Baden-Württemberg, Deutschland</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">1987</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="home" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Praxisgröße</p>
                    <p class="text-sm">400 qm in 3 voneinander getrennten Räumlichkeiten</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="activity" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Physiotherapie, nachhaltige Gesundheitsförderung, Osteopathie, körperorientierte Psychotherapie</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Mitarbeiterzahl</p>
                    <p class="text-sm">7 Therapeuten</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Weitere Infos</p>
                    <a
                      href="https://www.rfg-stuttgart.de"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-[#8B1E81] hover:underline"
                    >
                      www.rfg-stuttgart.de
                    </a>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Eine 30-jährige Tradition – und die Herausforderung, am Puls der Zeit zu bleiben
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Nach der Anstellung als Masseurin in der Praxis übernahm Heike Schaible das Unternehmen 10 Jahre nach der Praxisgründung. In diesem Zuge bildete sie sich zudem als Physiotherapeutin und Heilpraktikerin sowie später noch als Osteopathin weiter, um das Praxisangebot stetig zu erweitern und am Puls der Zeit zu bleiben.
            </p>

            <p class="text-base md:text-lg">
              Um die Abrechnungsbarrieren der Leistungen in der Osteopathie zu umgehen, entschied Heike Schaible sich 2009 dafür, den ersten Selbstzahlerbereich aufzubauen. Von diesem Schritt in den zweiten Gesundheitsmarkt versprach sie sich vor allem in zwei Punkten einen Mehrwert:
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Zum einen gibt einem der Selbstzahlerbereich die Chance, mehr Zeit für die Patientinnen und Patienten zu haben. Dadurch sind wir als Therapeuten natürlich auch deutlich weniger Stress ausgesetzt. Zum anderen geht es uns auch um die Unabhängigkeit von den gesetzlichen Krankenkassen, da die Vergütung für uns Physiotherapeuten sehr gering ist. So haben sowohl die Patienten, als auch wir Therapeuten einen positiven Nutzen von dem erweiterten privaten Angebot."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              In einer getrennten Räumlichkeit gegenüber ihrer Physiotherapie Praxis konnte sie bereits 2009 mit ihren Kolleginnen und Kollegen auch im zweiten Gesundheitsmarkt Fuß fassen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „So haben wir auf der einen Seite das Physio Angebot als Kassen- und Privatleistung und gegenüber den sogenannten ‚Wirkraum', ausschließlich für Selbstzahler."
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Die Trennung der Leistungen sichtbar machen
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Durch die räumliche Trennung wurde die Unterscheidung der Leistungen für die Patienten deutlich ersichtlicher. Vorher entgegnete ihr oftmals noch Unverständnis von Patientenseite, was nun privat ist und was nicht.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Es ist eine große Herausforderung: den Selbstzahlerbereich aufbauen und als eben solchen zu etablieren und deutlich von der Praxis abzugrenzen."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Da fehlt eben manchmal das Verständnis, dass man nicht alles auf das Rezept abrechnen kann."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Dennoch merkt Schaible eine positive Entwicklung hin zu einem Umdenken. Im Vergleich zu vor zehn Jahren lässt sich eine deutliche Verbesserung im Verständnis des Selbstzahlerbereichs in der Physiotherapie erkennen. Verschiedene After-Work-Angebote werden gut angenommen, aber dennoch bleibt die Anerkennung der Selbstzahlerleistungen eine der zentralen Herausforderungen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/heike-raum-fuer-gesundheit-bewegungsraum.jpg"
            alt="Bewegungsraum mit Pixformance Stationen bei Raum für Gesundheit in Stuttgart"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Digitales Training als Erweiterung des Selbstzahlerbereichs
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Um den Selbstzahlerbereich in puncto Trainingstherapie zu erweitern, entschied sich Heike Schaible für das digitale Trainingskonzept von Pixformance.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Die Medizin und natürlich auch die Anforderungen der Patienten sowie die Anforderungen an die Therapeuten haben sich entwickelt, deshalb bleibt man natürlich dran, entwickelt sich weiter und schaut, was gibt's Neues, was ist anders."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Deshalb entstand in einer dritten Location, unweit der Praxis und dem Wirkraum, noch ein zweiter Selbstzahlerbereich: der „Bewegungsraum". Vier Pixformance Trainingsstationen wurden dort in einem 80 qm großen Raum aufgestellt.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Vor allem hören wir oft von unseren Patienten, dass sie sich in einem Fitnessstudio nicht so wohl fühlen. Somit finde ich das eine tolle Möglichkeit, die Leute zu unterstützen, in Bewegung zu bleiben."
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 4 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-12">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Entscheidung für Pixformance – aus eigener Überzeugung
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Bekannt war ihr Pixformance bereits durch ihre Mitgliedschaft in der Frauenfitnesskette Mrs.Sporty, die von Pixformance Inhaberin Valerie Bures-Bönström mitbegründet wurde. Mit über 200.000 Trainierenden pro Jahr ist das Pixformance Konzept dort bereits seit 2013 in mehreren europäischen Ländern im Einsatz.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Ich habe mit Pixformance trainiert und mir hat das einfach so Spaß gemacht, das Funktionelle Training war für mich sofort sinnig. Dann habe ich mir gedacht, dass das für unsere Kundinnen oder Kunden eigentlich echt eine super Ergänzung zur Therapie sein kann. Vor allem hören wir oft von unseren Patienten, dass sie sich in einem Fitnessstudio nicht so wohl fühlen. Somit finde ich das eine tolle Möglichkeit, die Leute zu unterstützen, in Bewegung zu bleiben."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Viele der Patienten haben zu einem solchen Trainingsangebot einen einfachen Zugang, sodass auch das Verständnis in puncto Selbstzahlerbereich nochmals steigt.
            </p>
          </div>
        </div>

        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Entlastung der Mitarbeitenden als zentrales Ziel
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Auch der Gedanke an das virtuell betreute Training und die damit einhergehende Entlastung der eigenen Mitarbeitenden war für Heike Schaible ein weiterer Grund für die Kaufentscheidung.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Vor allem, wenn ich an den Fachkräftemangel denke: So viele Kolleginnen und Kollegen sind komplett ausgebrannt."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Ich will damit vor allem meinen Mitarbeitenden entgegenkommen und ihnen eine einfachere und abwechslungsreichere Arbeit bieten. Dank des digitalen Konzepts werden meine Mitarbeitenden bei der Betreuung der Patienten an den Pixformance Stationen deutlich entlastet."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Die Trainingsanweisungen durch den virtuellen Personal Trainer sowie die Korrekturen in Echtzeit erlauben es zudem, auch mehrere Patienten gleichzeitig zu betreuen – und das ohne größeren Betreuungsaufwand.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Der zweite Selbstzahlerbereich, der Bewegungsraum, ist somit ein weiterer Schritt in Richtung bessere Vergütung und einen angenehmeren Berufsalltag."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Die meisten Patienten sind auf Anhieb begeistert von den Pixformance Stationen und finden es toll – ein weiterer Beweis, dass der Schritt in Richtung digitale Trainingstherapie der richtige war.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#8B1E81] via-[#4A3D91] to-[#02308C]"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#8B1E81]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#8B1E81] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#8B1E81] hover:bg-[#4A3D91] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
