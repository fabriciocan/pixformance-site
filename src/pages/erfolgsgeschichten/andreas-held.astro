---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Virtuelle Trainingsunterstützung in der Taekwondo Sportschule - Dr. Andreas Held - Pixformance"
  description="Digitale Sportgeräte im Einsatz bei der Kampfkunstschule YU-Taekwondo in Österreich. Dr. Andreas Held über das computergestützte Training mit Pixformance."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#6BDBD1]/20 to-[#02308C]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#6BDBD1]/20 border border-[#6BDBD1]/40 text-sm font-bold text-[#02308C] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="zap" size="sm" />
            Fitness
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Virtuelle Trainingsunterstützung beim Taekwondo Training
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Digitale Sportgeräte im Einsatz bei der Kampfkunstschule YU-Taekwondo
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Quote -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
          <p class="text-foreground italic text-base md:text-xl">
            „Das Training mit Pixformance ist so vielseitig einsetzbar, für jede Altersklasse und Schwierigkeitsstufe: vom absoluten Anfänger bis hin zum Profi können das alle ohne Probleme sinnvoll nutzen."
          </p>
          <p class="text-sm text-foreground-muted mt-3 font-semibold">— Dr. Andreas Held, Großmeister Taekwondo & Inhaber YU-Taekwondo</p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/Dr.-Andreas-Held-_Dr.-YU.jpg"
                alt="Dr. Andreas Held - Großmeister Taekwondo und Inhaber YU-Taekwondo"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Dr. Andreas Held
              </h2>
              <p class="text-xl text-[#02308C] font-semibold">
                Großmeister Taekwondo & Inhaber
              </p>
            </div>

            <!-- Sportschule Info Card -->
            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="zap" size="md" class="text-[#02308C]" />
                Sportschule Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Standort</p>
                    <p class="text-sm">27 Standorte in Österreich</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">2003 (erste Sportschule in Wien)</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="activity" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Traditionelle Kampfkunst: Bewegung, Fitness, Gesundheit, Verteidigung</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Mitglieder</p>
                    <p class="text-sm">ca. 3.400</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Weitere Infos</p>
                    <a
                      href="https://www.yu-taekwondo.at"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-[#02308C] hover:underline"
                    >
                      www.yu-taekwondo.at
                    </a>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Computergestützt Taekwondo lernen mithilfe digitaler Sportgeräte
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Die seit knapp 20 Jahren bestehende Kampfkunstschule YU-Taekwondo setzt bei ihrem 27. Standort auf innovative Unterstützung. Gründer und Großmeister Dr. Andreas Held ist in seinem Team bekannt dafür, innovative Ideen ins Spiel zu bringen – so hat er beispielsweise bereits sehr früh ein Taekwondo-Training speziell für Kleinkinder ab 2,5 Jahren entwickelt. Mittlerweile trainieren ca. 3.400 Mitglieder in den Sportschulen in Österreich, vom Profi bis zum 84-jährigen Senior.
            </p>

            <p class="text-base md:text-lg">
              Auf der Suche nach einer neuen Innovation und einem breiteren Angebot für seine Mitglieder ist er mit seinem Team auf die digitalen Sportgeräte von Pixformance gestoßen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Ich habe schon seit langer Zeit den Gedanken, unseren Mitgliedern ein automatisiertes Trainingssystem mit vorgegebenen Übungen zur Verfügung zu stellen. Es gibt bereits teilweise die Möglichkeit, via Video am Training teilzunehmen. Das Thema Digitalisierung ist uns also nicht fremd. Pixformance passt da super zu unserem Ansatz."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              So haben nun 3 digitale Sportgeräte ihren Platz in einem der 27 Standorte gefunden. Ab 7 Jahren können die Mitglieder vor den Pixformance Stationen trainieren. Besonders: Der Großmeister höchstpersönlich macht die entsprechenden Übungen als virtueller Trainer vor. Dank Live-Feedback auf der Station und verschiedenen Schwierigkeitsstufen können sowohl absolute Anfänger als auch Profis an ihren Techniken feilen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section 1 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/taekwondo-digitales-sportgeraet-sportschule.jpg"
            alt="Pixformance Sportgeraet in der Taekwondo Sportschule YU"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Für jede Altersgruppe und die verschiedensten Schwierigkeitsgrade
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              In der YU-Sportschule wird ein Kombinationstraining mit Pixformance angeboten: Technik + Anwendung + Fitness. Die Mitglieder können die erlernten Techniken sofort an einem Dummy anwenden. Dr. Held legt großen Wert darauf, dass das Training abwechslungsreich und für jeden geeignet ist – sowohl für absolute Anfänger als auch für langjährige Mitglieder.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Da war auch mein Team anfangs sehr überrascht, dass das Training an Pixformance wirklich auch für die, die bereits 15 Jahre in der Materie sind, hilfreich sein und noch einen echten Mehrwert bringen kann."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Besonders toll ist auch, dass die Schüler durch die digitalen Sportgeräte ihre Techniken verfeinern können, ohne dass wir als Trainer immer vor Ort sein müssen. Die Pixformance Station korrigiert die Fehler und man lernt dadurch, sich selbst zu verbessern."
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section 2 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/taekwondo-digitales-sportgeraet-sportschule-digitale-bewegungsanalyse.jpg"
            alt="Digitale Bewegungsanalyse beim Taekwondo Training"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/taekwondo-digitales-sportgeraet-sportschule-digitale-bewegungsanalyse-pixformance-station.jpg"
            alt="Pixformance Station in der YU-Taekwondo Sportschule"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-12">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Digitale Sportgeräte als Chance für mehr Selbstvertrauen
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Die Möglichkeit, auch alleine betreut trainieren zu können, bietet in der Kampfkunstschule einen weiteren Vorteil. Waren Einzelstunden bisher sehr kostenaufwändig, kann nun jede Person von dem privaten digitalen Training mit dem virtuellen Großmeister profitieren.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Das bietet den Menschen, die anfangs etwas unsicher oder gruppenscheu sind, eine tolle Einstiegschance ins Training. Man kann erst mal für sich trainieren, an den Techniken feilen und somit sein Selbstbewusstsein stärken, bevor man später in die Gruppentrainings startet."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Einstiegshürden für viele Menschen, die sich sonst nicht getraut hätten, mit Taekwondo zu beginnen, werden so aufgehoben. Zudem ist geplant, dass die Mitglieder in Zukunft auch die Pixformance App nutzen – um ihre digitalen Übungen mit dem Großmeister als virtuellem Trainer auch zuhause weiterzutrainieren.
            </p>

            <p class="text-base md:text-lg">
              Geplant ist außerdem ein 24-Stunden-Training, sodass die Mitglieder, wann immer sie möchten, an den digitalen Sportgeräten trainieren können.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, #6BDBD1 80%, white 100%)"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#02308C]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#02308C] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#02308C] hover:bg-[#6BDBD1] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
