---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Die Evolution einer Fitnesskette durch digitales Training - Carina Dworak - Pixformance"
  description="Wie Mrs.Sporty Inhaberin Carina Dworak mit 7 Pixformance Geräten ihre Investition in 3 Monaten zurückgewann und doppelt so viele Mitglieder gewann."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#6BDBD1]/20 to-[#02308C]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#6BDBD1]/20 border border-[#6BDBD1]/40 text-sm font-bold text-[#02308C] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="zap" size="sm" />
            Fitness
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Die Evolution einer Fitnesskette durch digitales, funktionelles Training
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Mrs.Sporty Studio Wien – Pixformance für über 200.000 Mitglieder in ganz Europa
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Quote -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
          <p class="text-foreground italic text-base md:text-xl">
            „Ich als Unternehmerin investiere gern in mein Unternehmen, einfach um immer erfolgreich zu bleiben. Mit geht es vor allem darum, dass ich das eingesetzte Kapital sehr rasch wieder zurückgewonnen habe. Mit sieben Pixformance Geräten in meinem Club habe ich innerhalb von drei Monaten die gesamte Investition wieder zurückgewonnen."
          </p>
          <p class="text-sm text-foreground-muted mt-3 font-semibold">— Carina Dworak, Inhaberin Mrs.Sporty Studio Wien</p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/carina-dworak-mrssporty-wien.jpg"
                alt="Carina Dworak - Inhaberin Mrs.Sporty Studio Wien"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Carina Dworak
              </h2>
              <p class="text-xl text-[#02308C] font-semibold">
                Inhaberin Mrs.Sporty Studio, Wien
              </p>
            </div>

            <!-- Key Numbers -->
            <div class="grid grid-cols-2 gap-4">
              <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 text-center">
                <p class="text-3xl font-bold text-[#02308C] mb-1">3</p>
                <p class="text-xs text-foreground-muted">Monate bis zur Amortisierung</p>
              </Card>
              <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 text-center">
                <p class="text-3xl font-bold text-[#02308C] mb-1">2×</p>
                <p class="text-xs text-foreground-muted">mehr neue Mitglieder</p>
              </Card>
              <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 text-center">
                <p class="text-3xl font-bold text-[#02308C] mb-1">+3.000€</p>
                <p class="text-xs text-foreground-muted">Mehrumsatz nach 6 Monaten</p>
              </Card>
              <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 text-center">
                <p class="text-3xl font-bold text-[#02308C] mb-1">200K+</p>
                <p class="text-xs text-foreground-muted">Mitglieder europaweit</p>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <div class="relative w-full" style="padding-bottom: 56.25%;">
            <iframe
              class="absolute inset-0 w-full h-full"
              src="https://www.youtube.com/embed/MB8PhSlWndI"
              title="Mrs.Sporty und Pixformance - Carina Dworak Wien"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Ideales Training für jedes Alter – von 18 bis 93 Jahren
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Das funktionelle Training an Pixformance ist ideal und optimal für alle Mitglieder. Mein jüngstes Mitglied im Club ist 18 Jahre, mein ältestes Mitglied ist 93 Jahre alt und alle können individuell ihre Übungen toll trainieren."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Durch die Umstellung auf das Pixformance Training gewinnen unsere Clubs in den ersten Monaten durchschnittlich doppelt so viele Mitglieder als vor der Umstellung. Nach sechs Monaten haben die Clubs ca. 3.000 Euro mehr Umsatz bei, im Durchschnitt, Mehrkosten von 1.000 Euro."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Die Umstellung eröffnet außerdem die Chance, ehemalige Mitglieder zurückzugewinnen, die aufgrund der Veränderung des Trainings und der Öffnungszeiten sehr gerne wieder einsteigen wollen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Einheitliche Qualität und gesteigerte Trainingsqualität
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „In meinem Club hat Pixformance auf alle Fälle die Trainingsqualität enorm erhöht und durch die Plattform ist eine gleiche Qualität gegeben, egal ob möglicherweise ein Trainer anwesend ist, der relativ neu angefangen hat oder schon langjährig die Trainingserfahrung hat. Das, was die Plattform bietet, gibt mir die Sicherheit für die Mitglieder, dass eine ziemlich einheitliche Qualität geboten wird."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Carina Dworak</p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Höhere Mitgliederbindung und mehr Motivation
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Durch die längeren und flexibleren Öffnungszeiten und vor allem auch die Abwechslung, die Pixformance unseren Mitgliedern jetzt bietet, hat sich auch die Mitgliederbindung enorm gesteigert. Die Mitglieder genießen es, jetzt ihre Ergebnisse schwarz auf weiß zu sehen. Andererseits können wir, je nachdem wie fortgeschritten die Trainingserfolge sind, neue Übungen und Programme zusammenstellen."
              </p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Wenn neue Mitglieder wieder ein neues Trainingsprogramm haben, dann gehen sie wieder ganz euphorisch in den Zirkel und freuen sich auf dieses neue Training. Die Frauen kommen auch viel regelmäßiger. Wir haben auch ganz viele, die drei bis viermal, ja sogar fünfmal die Woche kommen, weil sie ja auch immer das Wochenende dazu nehmen können und dadurch auch das Preis-Leistungsverhältnis fantastisch ist."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Carina Dworak</p>
            </Card>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Der Vorteil von Pixformance für die Mrs.Sporty Clubs ist ganz klar, ein noch erfolgreicheres Trainingskonzept in der Zukunft anbieten zu können."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Carina Dworak</p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#02308C] via-[#4A3D91] to-[#8B1E81]"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#02308C]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#02308C] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#02308C] hover:bg-[#4A3D91] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
