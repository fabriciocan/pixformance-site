---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Kundenbindung in der Physiotherapie mit digitalem funktionellen Training – Gesundheitsrondell - Pixformance"
  description="Volker Sutor vom Gesundheitsrondell erklaert, wie digitales funktionelles Training mit Pixformance die Kundenbindung staerkt und Patienten zu langfristigen Mitgliedern macht."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#8B1E81]/10 to-[#6BDBD1]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="heart" size="sm" />
            Physiotherapie
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Kundenbindung in der Physiotherapie mit digitalem funktionellen Training
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Wie das Gesundheitsrondell mit Pixformance Patienten langfristig bindet und neue Einnahmequellen erschließt
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <p class="text-lg text-foreground-muted leading-relaxed mb-8">
          <strong class="text-foreground">Das Gesundheitsrondell mit seinen mehreren Physiotherapie- und Rehazentren in der Region Heilbronn-Franken</strong> gehört zu den größten ambulanten Therapieanbietern im süddeutschen Raum. Mit über 90 Mitarbeiterinnen und Mitarbeitern an mehreren Standorten – darunter Brackenheim, Neckarsulm und Heilbronn – betreut das Unternehmen seit 1999 tausende Patienten jährlich. Inhaber Volker Sutor erklärt, wie digitales funktionelles Training mit Pixformance die Kundenbindung stärkt und neue wirtschaftliche Perspektiven eröffnet.
        </p>

        <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
          <p class="text-foreground italic text-base md:text-lg">
            „Wir wollten unseren Patienten nach der klassischen Physiotherapie etwas anbieten können, das sie langfristig bei uns hält – und das gleichzeitig messbare Therapieergebnisse liefert."
          </p>
          <p class="text-sm text-foreground-muted mt-2">— Volker Sutor, Inhaber Gesundheitsrondell</p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/Volker-Sutor-Portrait.png"
                alt="Volker Sutor – Inhaber Gesundheitsrondell"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Volker Sutor
              </h2>
              <p class="text-xl text-[#8B1E81] font-semibold">
                Inhaber – Gesundheitsrondell
              </p>
            </div>

            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="briefcase" size="md" class="text-[#8B1E81]" />
                Praxis Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Standorte</p>
                    <p class="text-sm">Brackenheim, Neckarsulm, Heilbronn u. weitere</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">1999</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Mitarbeiterzahl</p>
                    <p class="text-sm">90–100 Mitarbeiterinnen und Mitarbeiter</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="activity" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Physiotherapie, Rehabilitation, Bewegungstherapie, Selbstzahlerangebote</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#8B1E81] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Logo</p>
                    <img
                      src="/images/erfolgsgeschichten/gesundheitsrondell_logo.png"
                      alt="Gesundheitsrondell Logo"
                      class="h-8 mt-1 object-contain"
                      loading="lazy"
                    />
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1: Motivation -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Die Motivation: Patienten langfristig binden
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Als eine der ersten Entscheidungen beim Aufbau zusätzlicher Angebote stand für Volker Sutor fest: Die Physiotherapie braucht ein Konzept, das über die klassische Kassenleistung hinausgeht. Patienten, die nach Abschluss ihrer Therapie keinen Anlass mehr haben, in die Praxis zu kommen, gehen verloren – sowohl als Kunden als auch in ihrer körperlichen Gesundheit.
            </p>

            <p class="text-base md:text-lg">
              Mit dem Pixformance System fand das Gesundheitsrondell ein Trainingskonzept, das sowohl für die aktive Therapiebegleitung als auch für die Nachsorge und Prävention geeignet ist. Patienten trainieren unter digitaler Anleitung, werden durch das System bei der korrekten Bewegungsausführung begleitet – und können so eigenständig und effektiv weitertrainieren, auch wenn kein Therapeut direkt daneben steht.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Pixformance ist für uns das Bindeglied zwischen Therapie und langfristiger Gesundheit unserer Patienten. Es schließt die Lücke zwischen dem Ende der Verordnung und einem aktiven, gesunden Lebensstil."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Volker Sutor</p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/Volker-Sutor-Gesundheitsrondell-Training-an-Pixformance.png"
            alt="Training an der Pixformance Station im Gesundheitsrondell"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-6 text-center">
          Volker Sutor im Interview
        </h2>
        <p class="text-center text-foreground-muted mb-8">
          Hören Sie selbst, wie das Gesundheitsrondell mit Pixformance die Kundenbindung stärkt.
        </p>
        <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; border-radius: 12px; box-shadow: 0 4px 24px rgba(0,0,0,0.12);">
          <iframe
            src="https://www.youtube.com/embed/iXq8-xyXboc"
            title="Volker Sutor – Gesundheitsrondell – Pixformance Erfolgsgeschichte"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 2: Wirtschaftliche Ergebnisse -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Wirtschaftliche Ergebnisse und neue Chancen
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Die Integration von Pixformance hat dem Gesundheitsrondell neue wirtschaftliche Perspektiven eröffnet. Durch den Aufbau eines Selbstzahlerbereichs konnten die Standorte ihre Einnahmen diversifizieren und gleichzeitig die Auslastung der Räumlichkeiten erhöhen – ohne proportional mehr Personal einsetzen zu müssen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#8B1E81]/5 border-l-4 border-[#8B1E81]">
              <p class="text-foreground italic text-base md:text-lg">
                „Der Selbstzahlerbereich mit Pixformance ist für uns zu einem echten wirtschaftlichen Standbein geworden. Wir sind weniger abhängig von Kassenleistungen und können gleichzeitig unseren Patienten ein langfristiges Angebot machen."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Volker Sutor</p>
            </Card>

            <p class="text-base md:text-lg">
              Besonders wertvoll ist die Messbarkeit der Trainingsfortschritte. Das System dokumentiert automatisch die Leistungsentwicklung jedes Patienten – ein Argument, das Patienten überzeugt, weiterhin zu kommen. Denn sie sehen schwarz auf weiß, was sie erreicht haben und was möglich ist.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Results Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-12 text-center" data-scroll="fade-up">
          Drei Ergebnisse, die überzeugen
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Result 1: Kundenbindung -->
          <div data-scroll="fade-up" data-delay="1">
            <Card variant="elevated" padding="lg" class="h-full border-t-4 border-[#8B1E81] text-center">
              <div class="w-16 h-16 rounded-full bg-[#8B1E81]/10 flex items-center justify-center mx-auto mb-4">
                <Icon name="users" size="lg" class="text-[#8B1E81]" />
              </div>
              <h3 class="font-bold text-xl mb-3 text-[#8B1E81]">Kundenbindung</h3>
              <p class="text-foreground-muted text-sm">
                Patienten bleiben nach Abschluss der klassischen Therapieverordnung als zahlende Mitglieder erhalten. Das Gesundheitsrondell schafft damit eine stabile Stammkundschaft, die kontinuierlich Einnahmen generiert.
              </p>
            </Card>
          </div>

          <!-- Result 2: Therapieergebnisse -->
          <div data-scroll="fade-up" data-delay="2">
            <Card variant="elevated" padding="lg" class="h-full border-t-4 border-[#8B1E81] text-center">
              <div class="w-16 h-16 rounded-full bg-[#8B1E81]/10 flex items-center justify-center mx-auto mb-4">
                <Icon name="activity" size="lg" class="text-[#8B1E81]" />
              </div>
              <h3 class="font-bold text-xl mb-3 text-[#8B1E81]">Therapieergebnisse</h3>
              <p class="text-foreground-muted text-sm">
                Die digitale Trainingsanleitung sorgt für korrekte Bewegungsausführung und messbare Fortschritte. Therapeuten können die Entwicklung ihrer Patienten lückenlos nachverfolgen und die Programme gezielt anpassen.
              </p>
            </Card>
          </div>

          <!-- Result 3: Von Patienten zu Mitgliedern -->
          <div data-scroll="fade-up" data-delay="3">
            <Card variant="elevated" padding="lg" class="h-full border-t-4 border-[#8B1E81] text-center">
              <div class="w-16 h-16 rounded-full bg-[#8B1E81]/10 flex items-center justify-center mx-auto mb-4">
                <Icon name="trending-up" size="lg" class="text-[#8B1E81]" />
              </div>
              <h3 class="font-bold text-xl mb-3 text-[#8B1E81]">Von Patienten zu Mitgliedern</h3>
              <p class="text-foreground-muted text-sm">
                Der Übergang von der kassenfinanzierten Therapie zum eigenfinanzierten Selbstzahlerbereich gelingt nahtlos. Patienten erleben den Mehrwert des Trainings und entscheiden sich freiwillig für eine langfristige Mitgliedschaft.
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#8B1E81] via-[#4A3D91] to-[#02308C]"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#8B1E81]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#8B1E81] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#8B1E81] hover:bg-[#4A3D91] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#8B1E81]/10 border border-[#8B1E81]/20 text-sm font-bold text-[#8B1E81] hover:bg-[#8B1E81]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
