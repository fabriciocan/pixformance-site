---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Mit digitaler Bewegungstherapie mehr Patienten betreuen - Schlossphysio - Pixformance"
  description="Die Physiotherapie Praxis Schlossphysio in Winterthur, Schweiz, betreut mit Pixformance mehr Patienten zur selben Zeit – ohne Zusatzpersonal."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#02308C]/10 to-[#6BDBD1]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="heart" size="sm" />
            Physiotherapie
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Mit digitaler Bewegungstherapie mehr Patienten zur selben Zeit betreuen
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Kleine Praxis, großer Fortschritt – Schlossphysio, Winterthur, Schweiz
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <p class="text-lg text-foreground-muted leading-relaxed mb-8">
          <strong class="text-foreground">Die 2020 gegründete Physiotherapie Praxis Schlossphysio in Winterthur, Schweiz,</strong> ist eine kleine Praxis, die sich Manueller Therapie sowie Atemtherapie widmet. Für den Bereich Bewegungstherapie wurde von Anfang an das interaktive Training mit Pixformance integriert — mit dem Ziel, mehr Patienten zur selben Zeit zu betreuen und Entlastung im Praxisalltag zu schaffen.
        </p>

        <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
          <p class="text-foreground italic text-base md:text-lg">
            „Wir wollten ein ganzheitliches Trainingsgerät, welches möglichst viele Muskelgruppen und Bewegungsmuster bei der Sporttherapie abdecken kann."
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/Pixformance-in-der-Schweiz.jpg"
                alt="Pixformance Training in der Schlossphysio Praxis Winterthur"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Swetlana Zimmermann
              </h2>
              <p class="text-xl text-[#02308C] font-semibold">
                Leitende Physiotherapeutin – Schlossphysio
              </p>
            </div>

            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="briefcase" size="md" class="text-[#02308C]" />
                Praxis Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Ort</p>
                    <p class="text-sm">Winterthur, Schweiz</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">2020</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="activity" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Manuelle Therapie, Atemtherapie, Interaktives Training</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Mitarbeiterzahl</p>
                    <p class="text-sm">1 Therapeutin</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Weitere Infos</p>
                    <a
                      href="https://www.schlossphysio.ch"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-[#02308C] hover:underline"
                    >
                      www.schlossphysio.ch
                    </a>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Die Motivation hinter der Integration des Pixformance Trainingskonzepts
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Bei der Gründung der Praxis stand für Swetlana Zimmermann fest, dass sie ein Gerät integrieren möchte, mit welchem eine ganzheitliche Bewegungstherapie möglich ist — möglichst viele Muskelgruppen und Bewegungsmuster, individuell auf jeden Patienten anpassbar. Aus einer bereits gemachten Erfahrung mit der Pixformance Station kam schnell die Zusammenarbeit zustande.
            </p>

            <p class="text-base md:text-lg">
              Neben ein paar Kleingeräten und einer Sprossenwand hat Pixformance alle weiteren nötigen Therapiegeräte in der Praxis ersetzen können und steht voll im Fokus der Bewegungstherapie. Auch Patienten der Schlossphysio kennen Pixformance bereits durch das eigene Training bei der Frauenfitnesskette Mrs.Sporty.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/Pixformance-Fitness-Digitales-Sportgeraet-Fitnessstudio-eroeffnen-eGym-voll-vernetzt.jpg"
            alt="Pixformance digitale Bewegungstherapie in der Schlossphysio"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Zur Unterstützung und Entlastung bei der Sporttherapie
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Bis auf ganz wenige Ausnahmen nutzen alle unsere Patienten das Pixformance Angebot."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Wenn der Patient mit seiner Therapieverordnung in die Schlossphysio kommt, wird — je nach Gesundheitszustand — bereits nach der ersten oder zweiten Sitzung die Pixformance Station als Unterstützung in der Bewegungstherapie herangezogen. Die Patienten trainieren dann auch alleine unter virtueller Anleitung, was für eine deutliche Entlastung sorgt.
            </p>

            <p class="text-base md:text-lg">
              Für einen schnelleren Therapieerfolg hat sich auch die Pixformance App bewährt. Nach den ersten Sitzungen wird sie vorgestellt und installiert — so können die Patienten ihr individuelles Programm jederzeit auf dem Smartphone aufrufen und die Übungen auch zuhause durchführen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Vor allem die Flexibilität, welche man durch das digitale Trainingskonzept erhält, war für uns ein ausschlaggebender Punkt."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Geschäftsführer Claas Bickeböller erklärt die Entscheidung für Pixformance:
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Wir wissen aus Erfahrung: Bei der Bewegungstherapie kann man den Leuten die Übungen und die Bewegung hundert Mal erklären. Dennoch haben die meisten nach einer halben Stunde wieder vergessen, dass sie zum Beispiel darauf achten müssen, dass das Knie gerade steht. Und mit Pixformance wird man während der Bewegungstherapie eben immer wieder daran erinnert. So wissen wir, dass die Patienten immer recht sicher trainieren und die Übungen richtig ausführen."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Claas Bickeböller, Geschäftsführer Schlossphysio</p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Der Schweizer Gesundheitsmarkt – Patient im Fokus
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Der Hauptbeweggrund für die Schlossphysio war anders als bei deutschen Praxen: nicht der Weg in den Selbstzahlerbereich, um sich von der GKV zu lösen. Das Kassensystem in der Schweiz funktioniert grundlegend anders.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „In der Schweiz kommt man viel schneller an ein Rezept, sodass es kein Problem ist, bei Erkrankungen alle drei Monate eine neue Physiotherapie Verordnung zu erhalten. Somit ist auch der Selbstzahlerbereich nicht von so großem Wert, wie er es sicherlich in Deutschland ist."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Claas Bickeböller</p>
            </Card>

            <p class="text-base md:text-lg">
              In der Schweiz ist die Krankenversicherung per se Privatleistung — eine Grundversicherung ist obligatorisch und muss selbst getragen werden. Die Physiotherapie gehört zu den von der Grundversicherung übernommenen Dienstleistungen. Das Ergebnis: Auf der Therapeutenseite steht der Patient stärker im Fokus — und nicht die Frage, wie viel von der Krankenkasse ausgezahlt wird.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, #6BDBD1 80%, white 100%)"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#02308C]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#02308C] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#02308C] hover:bg-[#6BDBD1] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
