---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';
---

<BaseLayout
  title="Motiviertere Patienten durch digitale Therapie bei MS - Gabriele Buchstein - Pixformance"
  description="Wie die Sauerlandklinik Hachen mit Pixformance MS-Patienten zu mehr Motivation, mehr Wiederholungen und einem schnelleren Therapieerfolg verhilft."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#02308C]/10 to-[#6BDBD1]/10 overflow-hidden py-12 md:py-16">
    <div class="container">
      <div class="max-w-5xl mx-auto space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <a
            href="/erfolgsgeschichten"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
          >
            <Icon name="arrow-left" size="sm" />
            Zurück zur Übersicht
          </a>
        </div>

        <div class="space-y-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hero-animate" style="animation-delay: 0.2s;">
            <Icon name="activity" size="sm" />
            Klinik
          </span>

          <h1 class="font-display text-3xl md:text-5xl lg:text-6xl font-bold leading-tight hero-animate" style="animation-delay: 0.3s;">
            Motiviertere Patienten durch digitale Therapie bei MS
          </h1>

          <p class="text-xl md:text-2xl text-foreground-muted leading-relaxed hero-animate" style="animation-delay: 0.4s;">
            Sauerlandklinik Hachen – Neurologische Spezialklinik für Multiple Sklerose
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Quote -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
          <p class="text-foreground italic text-base md:text-xl">
            „Wir haben durch Pixformance eine deutliche Zeitersparnis. Nach einer bloß 30-minütigen Einweisung können die Patienten selbstständig unter Aufsicht trainieren. So können mehr Patienten zeitgleich betreut werden und nebenbei kann beispielsweise sogar dokumentiert werden."
          </p>
          <p class="text-sm text-foreground-muted mt-3 font-semibold">— Gabriele Buchstein, Leitende Physiotherapeutin, Sauerlandklinik Hachen</p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="order-2 lg:order-1" data-scroll="fade-up">
            <Card variant="elevated" padding="none" class="overflow-hidden">
              <img
                src="/images/erfolgsgeschichten/Pixformance-Sauerland-Klinik-Hachen-Telerehabilitation-Portrait-Gabriele-Buchstein.jpg"
                alt="Gabriele Buchstein - Leitende Physiotherapeutin Sauerlandklinik Hachen"
                class="w-full h-auto max-h-[380px] object-cover object-center"
                loading="lazy"
              />
            </Card>
          </div>

          <!-- Info -->
          <div class="order-1 lg:order-2 space-y-8" data-scroll="fade-up" data-delay="1">
            <div>
              <h2 class="font-display text-3xl md:text-4xl font-bold mb-2">
                Gabriele Buchstein
              </h2>
              <p class="text-xl text-[#02308C] font-semibold">
                Leitende Physiotherapeutin
              </p>
            </div>

            <Card variant="elevated" padding="lg" class="bg-white">
              <h3 class="font-bold text-xl mb-4 flex items-center gap-2">
                <Icon name="activity" size="md" class="text-[#02308C]" />
                Klinik Kurzprofil
              </h3>

              <div class="space-y-3 text-foreground-muted">
                <div class="flex items-start gap-3">
                  <Icon name="map-pin" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Ort</p>
                    <p class="text-sm">Hachen, Nordrhein-Westfalen</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="calendar" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Gegründet</p>
                    <p class="text-sm">1964</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="heart" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Schwerpunkt</p>
                    <p class="text-sm">Multiple Sklerose (MS)</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="users" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Patientenkapazität</p>
                    <p class="text-sm">125 Betten</p>
                  </div>
                </div>

                <div class="flex items-start gap-3">
                  <Icon name="globe" size="sm" class="text-[#02308C] mt-1 flex-shrink-0" />
                  <div>
                    <p class="text-sm font-semibold text-foreground">Weitere Infos</p>
                    <a
                      href="https://www.sauerlandklinik-hachen.de"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-[#02308C] hover:underline"
                    >
                      www.sauerlandklinik-hachen.de
                    </a>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section 1 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Mehr Zeit, mehr Wiederholungen, mehr Motivation: Digitale Therapie bei MS
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              In der neurologischen Akutklinik im Sauerland mit Spezialisierung auf Multiple Sklerose werden die Patienten in sechs Fachbereichen betreut: Physiotherapie, Physikalische Therapie, Ergotherapie, Logopädie, Musiktherapie sowie Pflege. Gabriele Buchstein bietet gemeinsam mit ihrem Team ein auf MS zielgerichtetes Therapiekonzept — bestehende neurophysiologische Therapien in Kombination mit modernsten Therapieformen, darunter auch digitale Bewegungstherapie und Telerehabilitation.
            </p>

            <p class="text-base md:text-lg">
              Um das Angebot zu erweitern und den Patienten zusätzliche Trainingsmotivation zu bieten, entschied sich Buchstein nach einer erfolgreichen Teststellung für zwei Pixformance Stationen. Aktuell trainieren ca. 30 Patienten vor den Stationen. Voraussetzung ist eine gewisse Mobilität — Training im Rollstuhl ist dank vieler Sitzübungen problemlos möglich. Neben den über 350 Übungen hat die Klinik gemeinsam mit Pixformance eigene, speziell auf MS-Patienten zugeschnittene Übungen entwickelt.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section 1 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/Pixformance-Sauerland-Klinik-Hachen-Telerehabilitation-Therapie-1.jpg"
            alt="Pixformance Therapie in der Sauerlandklinik Hachen"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 2 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-8">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Selbstständigkeit für die Patienten, Entlastung für die Therapeuten
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Nach einer kurzen Einweisung können die Patienten bereits selbstständig an den Stationen trainieren. Ein Ansprechpartner ist immer in der Nähe, kann sich jedoch auch anderen Patienten oder der Dokumentation widmen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Es können auch wirklich jegliche Altersgruppen die Pixformance Stationen nutzen. Das ist toll, dass so viele Patienten von dem Training profitieren können, solange die kognitiven Fähigkeiten es zulassen. Und durch die Zeitersparnis haben schließlich nicht nur die Patienten, sondern auch wir effektiv was davon."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Gabriele Buchstein</p>
            </Card>

            <p class="text-base md:text-lg">
              Das Thema Digitalisierung spielt in der Sauerlandklinik eine große Rolle. Buchstein verweist dabei auch auf die Studienlage zum internen und externen Aufmerksamkeitsfokus:
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Anders als beim internen Aufmerksamkeitsfokus, bei welchem man den Patienten in Persona anleitet, handelt es sich beim Pixformance Training um einen externen Aufmerksamkeitsfokus."
              </p>
            </Card>

            <p class="text-base md:text-lg">
              Der Patient erhält den Übungsauftrag extern über die Station und ist dadurch nicht mehr so auf seinen eigenen Körper konzentriert, sondern achtet auf die Übungsausführung — was einen größeren Verbesserungseffekt erzeugt.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Das ist wie beim Spielen, da merkt man manchmal auch nicht, wie die Zeit vergeht. Und das ist wissenschaftlich begründet, dass die Bewegungen somit reflektorischer durchgeführt werden und man sich deutlich verbessert."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Gabriele Buchstein</p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section 2 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/Pixformance-Sauerland-Klinik-Hachen-Telerehabilitation-Therapie-2.jpg"
            alt="MS-Patient beim Training mit Pixformance in der Sauerlandklinik"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/pixformance-uebungen-im-sitzen-sauerland-klinik.jpg"
            alt="Pixformance Übungen im Sitzen für MS-Patienten"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Content Section 3 -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-12">
        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Mehr Wiederholungen, schnellerer Therapieerfolg
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Einen weiteren großen Vorteil sieht Buchstein in der deutlich spürbaren Motivation der Patienten. Wissenschaftlich bewiesen: der Trainingseffekt steigt deutlich mit der Anzahl der Wiederholungen.
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#02308C]/5 border-l-4 border-[#02308C]">
              <p class="text-foreground italic text-base md:text-lg">
                „Das Tolle an Pixformance ist: Dass die Station die Patienten anspornt, mehr Wiederholungen zu machen. Die Patienten sind begeistert und sehr motiviert, das ist zugegebenermaßen nicht häufig der Fall. Davon profitieren natürlich auch wir als Therapeuten, da die Patienten dadurch besser und zielgerichteter ihre Übungen ausführen."
              </p>
              <p class="text-sm text-foreground-muted mt-2">— Gabriele Buchstein</p>
            </Card>

            <p class="text-base md:text-lg">
              Die Pixformance App wird in der Klinik bisher sporadisch genutzt. Buchstein blickt jedoch zuversichtlich auf die Zukunft:
            </p>

            <Card variant="elevated" padding="lg" class="bg-[#6BDBD1]/10 border-l-4 border-[#6BDBD1]">
              <p class="text-foreground italic text-base md:text-lg">
                „Es wäre natürlich schön, wenn man sehen könnte, ob die Patienten zuhause weiter trainieren. Es ist also auf jeden Fall ein Zukunftsziel, die Patienten auch über den Klinikaufenthalt zuhause weiter zu betreuen."
              </p>
            </Card>
          </div>
        </div>

        <div data-scroll="fade-up">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
            Eigene Übungen für die besonderen Bedürfnisse der MS-Patienten
          </h2>

          <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
            <p class="text-base md:text-lg">
              Gemeinsam mit dem Therapeutenteam vor Ort in Hachen hat Pixformance neue Übungen erarbeitet. Neben den 350+ Übungen aus dem Pixformance-Katalog stehen weitere Trainingsabläufe bereit — speziell für die verschiedenen Stadien der MS-Erkrankung entwickelt, darunter auch vermehrt Übungen im Sitzen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section 3 -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-xl mx-auto" data-scroll="scale">
        <Card variant="elevated" padding="none" class="overflow-hidden">
          <img
            src="/images/erfolgsgeschichten/pixformance-uebungen-im-sitzen-sauerland-klinik-ms.jpg"
            alt="MS-spezifische Sitzübungen mit Pixformance in der Sauerlandklinik Hachen"
            class="w-full h-auto max-h-[380px] object-cover object-center"
            loading="lazy"
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, #6BDBD1 80%, white 100%)"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <Card variant="elevated" padding="xl" class="bg-white/95 backdrop-blur-sm">
          <div class="text-center space-y-6">
            <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground">
              Sie wünschen eine individuelle Beratung?
            </h2>

            <div class="flex flex-col md:flex-row items-center justify-center gap-12 py-8">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 flex-shrink-0 border-[#02308C]">
                <img
                  src="/images/erfolgsgeschichten/Pixformance-Tobias-Produktberater-rund.png.webp"
                  alt="Tobias Baader - COO"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="text-center md:text-left space-y-2">
                <p class="text-xs uppercase tracking-widest text-foreground-muted font-semibold">Ihr Ansprechpartner</p>
                <h3 class="font-bold text-3xl text-foreground">Tobias Baader</h3>
                <p class="text-lg text-[#02308C] font-semibold">COO</p>
              </div>
            </div>

            <Button
              size="lg"
              href="/testen"
              class="bg-[#02308C] hover:bg-[#6BDBD1] text-white"
            >
              Schreiben Sie uns
              <Icon name="mail" size="sm" />
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Back Button -->
  <section class="py-8 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <a
          href="/erfolgsgeschichten"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 transition-colors"
        >
          <Icon name="arrow-left" size="sm" />
          Zurück zur Übersicht
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  [data-scroll="scale"] {
    transform: scale(0.95);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
