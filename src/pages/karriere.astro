---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Button from '@/components/ui/form/Button/Button.astro';

const values = [
  {
    icon: 'lightbulb',
    title: 'Innovation',
    description: 'Kreative und hochmotivierte Menschen mit interessanten und provokativen Ideen',
  },
  {
    icon: 'users',
    title: 'Vielfalt',
    description: 'Vielfalt ist nicht etwas, worüber wir reden – es ist, wer wir sind',
  },
  {
    icon: 'trending-up',
    title: 'Weiterbildung',
    description: 'Kontinuierliche fachliche und persönliche Weiterbildung jedes Einzelnen',
  },
  {
    icon: 'zap',
    title: 'Mut',
    description: 'Mutige Perspektiven und unerschütterliche Neugierde auf die Zukunft',
  },
];

const benefits = [
  { icon: 'briefcase', label: 'Spannende Projekte' },
  { icon: 'heart', label: 'Work-Life-Balance' },
  { icon: 'book', label: 'Weiterbildung' },
  { icon: 'coffee', label: 'Modernes Büro' },
  { icon: 'users', label: 'Starkes Team' },
  { icon: 'globe', label: 'Internationale Projekte' },
];
---

<BaseLayout
  title="Jobs - Karriere bei Pixformance Sports GmbH"
  description="Chronisch neugierig? Gut. Wir auch. Bei Pixformance ist Vielfalt nicht etwas, worüber wir reden – es ist, wer wir sind."
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Hero Section -->
  <section class="relative  overflow-hidden py-16 md:py-24">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="container relative">
      <div class="max-w-5xl mx-auto text-center space-y-6">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-bold text-white">
            <Icon name="briefcase" size="sm" />
            Karriere bei Pixformance
          </span>
        </div>

        <h1 class="font-display text-4xl md:text-6xl lg:text-7xl font-bold leading-tight text-white hero-animate" style="animation-delay: 0.2s;">
          Chronisch neugierig?
          <br />
          <span class="text-[#6BDBD1]">Gut. Wir auch.</span>
        </h1>

        <p class="text-xl md:text-2xl text-white/90 leading-relaxed max-w-3xl mx-auto hero-animate" style="animation-delay: 0.3s;">
          Bei Pixformance ist Vielfalt nicht etwas, worüber wir reden –
          <span class="font-bold text-white">es ist, wer wir sind.</span>
        </p>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto" data-scroll="fade-up">
        <div class="text-center mb-12">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
            <Icon name="users" size="sm" />
            Über uns
          </span>
          <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
            Wer wir sind
          </h2>
        </div>

        <div class="space-y-6 text-lg text-foreground-muted leading-relaxed">
          <p>
            Als <span class="font-bold text-[#02308C]">Innovationsvorreiter</span> sind wir immer auf der Suche nach
            kreativen und hochmotivierten Menschen mit interessanten und provokativen Ideen,
            mit mutigen Perspektiven und einer unerschütterlichen Neugierde auf die Zukunft.
          </p>

          <p>
            Wir verknüpfen die individuelle Vergangenheit jedes Einzelnen, um unsere gemeinsame
            Zukunft zu gestalten. Dabei dreht sich unsere <span class="font-bold text-[#02308C]">Unternehmenskultur</span> um
            eine kontinuierliche fachliche und persönliche Weiterbildung jedes Einzelnen, während
            wir mutig dazu beitragen, den Wandel in einer modernen Welt voranzutreiben.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="heart" size="sm" />
          Unsere Werte
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold">
          Was uns ausmacht
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value, index) => (
          <Card
            variant="elevated"
            padding="lg"
            class="text-center hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 hover:scale-105 group bg-white"
            data-scroll="scale"
            data-delay={index + 1}
          >
            <div class="w-16 h-16 mx-auto rounded-2xl bg-[#02308C] flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
              <Icon name={value.icon} size="lg" class="text-white" />
            </div>
            <h3 class="font-bold text-xl mb-3 text-foreground">{value.title}</h3>
            <p class="text-foreground-muted text-sm leading-relaxed">{value.description}</p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="text-center mb-12" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#6BDBD1]/10 border border-[#6BDBD1]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="star" size="sm" />
          Benefits
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold">
          Was wir bieten
        </h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 max-w-5xl mx-auto">
        {benefits.map((benefit, index) => (
          <Card
            variant="elevated"
            padding="md"
            class="text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-2 hover:scale-105 group bg-white"
            data-scroll="scale"
            data-delay={Math.min(index + 1, 6)}
          >
            <div class="w-12 h-12 mx-auto rounded-xl bg-[#6BDBD1]/10 flex items-center justify-center mb-3 group-hover:bg-[#6BDBD1] group-hover:scale-110 transition-all duration-300">
              <Icon name={benefit.icon} size="md" class="text-[#6BDBD1] group-hover:text-white transition-colors duration-300" />
            </div>
            <p class="text-sm font-semibold text-foreground">{benefit.label}</p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Job Openings Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="briefcase" size="sm" />
          Stellenangebote
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          Aktuelle Stellenangebote
        </h2>
      </div>

      <div class="max-w-3xl mx-auto" data-scroll="fade-up">
        <Card
          variant="elevated"
          padding="xl"
          class="text-center bg-white"
        >
          <div class="w-20 h-20 mx-auto rounded-2xl bg-[#02308C]/10 flex items-center justify-center mb-6">
            <Icon name="search" size="lg" class="text-[#02308C]" />
          </div>

          <h3 class="font-bold text-2xl mb-4 text-foreground">
            Derzeit sind keine offenen Stellen verfügbar
          </h3>

          <p class="text-lg text-foreground-muted mb-8 leading-relaxed">
            Aber lassen Sie sich davon nicht abhalten! Wir sind immer auf der Suche
            nach talentierten Menschen, die unser Team bereichern möchten.
          </p>

          <div class="space-y-4">
            <p class="text-foreground-muted">
              Sie können uns gerne Ihre <span class="font-bold text-[#02308C]">Initiativbewerbung</span> senden:
            </p>

            <div class="flex items-center justify-center gap-3 text-foreground-muted">
              <Icon name="mail" size="md" class="text-[#02308C]" />
              <a
                href="mailto:contact@pixformance.com"
                class="text-lg font-semibold text-[#02308C] hover:text-[#6BDBD1] transition-colors underline"
              >
                contact@pixformance.com
              </a>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, #6BDBD1 80%, white 100%)"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto text-center space-y-8" data-scroll="fade-up">
        <div class="w-20 h-20 mx-auto rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center mb-6">
          <Icon name="rocket" size="lg" class="text-white" />
        </div>

        <h2 class="font-display text-4xl md:text-6xl font-bold text-white leading-tight">
          Bereit, Teil unseres Teams zu werden?
        </h2>

        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Wir freuen uns darauf, von Ihnen zu hören und gemeinsam die Zukunft
          des digitalen Trainings zu gestalten!
        </p>

        <div class="flex flex-wrap gap-4 justify-center pt-4">
          <Button
            size="lg"
            href="mailto:contact@pixformance.com"
            class="bg-black text-white hover:bg-black/80"
          >
            Bewerbung senden
            <Icon name="send" size="sm" />
          </Button>
          <Button
            size="lg"
            variant="outline"
            href="/ueber-uns"
            class="border-2 border-black text-black hover:bg-black hover:text-white"
          >
            Mehr über uns erfahren
            <Icon name="arrow-right" size="sm" />
          </Button>
        </div>

        <div class="pt-8 space-y-4">
          <p class="text-white/90 text-lg">
            Folgen Sie uns auf unseren Social Media Kanälen:
          </p>
          <div class="flex gap-4 justify-center">
            <a
              href="https://www.linkedin.com/company/pixformance-sports-gmbh"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center hover:bg-white/20 transition-all duration-300 hover:scale-110"
            >
              <Icon name="linkedin" size="md" class="text-white" />
            </a>
            <a
              href="https://www.instagram.com/pixformance/"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center hover:bg-white/20 transition-all duration-300 hover:scale-110"
            >
              <Icon name="instagram" size="md" class="text-white" />
            </a>
            <a
              href="https://www.facebook.com/Pixformance"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center hover:bg-white/20 transition-all duration-300 hover:scale-110"
            >
              <Icon name="facebook" size="md" class="text-white" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero Entry Animation */
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  /* Scroll Animation Styles */
  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  /* Fade In Up */
  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  /* Scale In */
  [data-scroll="scale"] {
    transform: scale(0.9);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  /* Stagger delays */
  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }

  [data-scroll][data-delay="4"] {
    transition-delay: 0.4s;
  }

  [data-scroll][data-delay="5"] {
    transition-delay: 0.5s;
  }

  [data-scroll][data-delay="6"] {
    transition-delay: 0.6s;
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  // Observe all elements with data-scroll attribute
  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
