---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
---

<BaseLayout title="Pixformance - Impressum">
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <section class="py-24">
    <div class="container max-w-4xl">
      <h1 class="font-display text-5xl font-bold mb-12">Impressum</h1>
      
      <div class="prose prose-lg max-w-none space-y-8">
        <div>
          <h2 class="font-display text-2xl font-bold mb-4">Angaben gemäß § 5 TMG</h2>
          <p>
            Pixformance Sports GmbH<br>
            Helmholtzstraße 2 – 9<br>
            GSG Hof / Aufgang H<br>
            10587 Berlin<br>
            Deutschland
          </p>
        </div>

        <div>
          <h2 class="font-display text-2xl font-bold mb-4">Kontakt</h2>
          <p>
            Telefon: +49 (0)30 39 80 56 10<br>
            E-Mail: contact@pixformance.com
          </p>
        </div>

        <div>
          <h2 class="font-display text-2xl font-bold mb-4">Vertretungsberechtigte Geschäftsführer</h2>
          <p>Pixformance Sports GmbH</p>
        </div>

        <div>
          <h2 class="font-display text-2xl font-bold mb-4">Registereintrag</h2>
          <p>
            Eintragung im Handelsregister<br>
            Registergericht: Amtsgericht<br>
            Registernummer: HRB
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
