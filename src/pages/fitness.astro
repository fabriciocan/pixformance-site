---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import BreadcrumbTabs from '@/components/ui/navigation/BreadcrumbTabs.astro';
import Button from '@/components/ui/form/Button/Button.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';

const tabs = [
  { label: 'PHYSIOTHERAPIE', href: '/physiotherapie' },
  { label: 'KLINIK', href: '/klinik' },
  { label: 'FITNESS', href: '/fitness' },
  { label: 'BGM', href: '/bgm' },
];

const benefits = [
  {
    icon: 'trending-up',
    title: 'Mehr Training und mehr Umsatz',
    description: 'Dank der patentierten Software können mehrere Trainierende gleichzeitig und ohne personellen Mehraufwand (z. B. abends) betreut werden.',
  },
  {
    icon: 'star',
    title: 'Hochwertige Clubausstattung',
    description: 'Ein zeitgemäßes Fitnessangebot gepaart mit einem maßgeschneiderten Trainingserlebnis für eine effektive Mitgliederbindung.',
  },
  {
    icon: 'file-text',
    title: 'Effiziente Mitgliederverwaltung',
    description: 'Auf der Online Plattform wird der Trainingsverlauf jedes Mitglieds für eine Trainingsanalyse und -optimierung exakt dokumentiert.',
  },
  {
    icon: 'user',
    title: 'Individuelle Betreuung',
    description: 'Trainingsprogramme können auf den Gesundheitszustand und das Alter jedes Mitglieds sekundenschnell zugeschnitten werden.',
  },
  {
    icon: 'clock',
    title: 'Mehr Zeit für das Wesentliche',
    description: 'Der Trainer muss nicht jede Übung persönlich vormachen und spart Zeit – was wiederum der Betreuung aller Mitglieder zugutekommt.',
  },
  {
    icon: 'list',
    title: '500+ Übungen verfügbar',
    description: 'Über 500 funktionelle Übungen sind so vielfältig und individuell wie Ihre Mitglieder und nur mit wenigen Klicks zu aktivieren.',
  },
];

const testimonials = [
  {
    name: 'Martijn Van Der Pijl',
    role: 'Inhaber',
    company: 'SlimBezig! in Veldhoven, Niederlande',
    image: '/images/SlimBezig_Martijn-Van-Der-Pijl-300x298.png',
    quote: 'Mit Pixformance bieten wir ein breites Spektrum an funktionellen Übungen und ein digitales Personal Training, mit dem unsere Trainer die Mitglieder herausfordern können. Darüber hinaus können die Übungen auch ohne Trainer verantwortungsvoll durchgeführt werden.',
  },
  {
