---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeaderWithDropdown from "@/components/layout/HeaderWithDropdown.astro";
import Footer from "@/components/layout/Footer.astro";
import PixformanceLogo from "@/components/PixformanceLogo.astro";
import BreadcrumbTabs from "@/components/ui/navigation/BreadcrumbTabs.astro";
import Button from "@/components/ui/form/Button/Button.astro";
import Icon from "@/components/ui/primitives/Icon/Icon.astro";
import Card from "@/components/ui/data-display/Card/Card.astro";

const tabs = [
  { label: "PHYSIOTHERAPIE", href: "/physiotherapie" },
  { label: "KLINIK", href: "/klinik" },
  { label: "FITNESS", href: "/fitness" },
  { label: "BGM", href: "/firmen-fitness" },
];

const benefits = [
  {
    icon: "7",
    title: "Steuerliche Absetzbarkeit",
    description:
      "Firmenfitness wird steuerlich unterstützt. Bis zu 500 Euro kann ein Unternehmen pro Mitarbeiter und pro Jahr lohnsteuerfrei für Maßnahmen investieren.",
  },
  {
    icon: "10",
    title: "Mitarbeiterbindung",
    description:
      "In Zeiten des Fachkräftemangels und einer hohen Fluktuationsrate in vielen Branchen, ist ein zeitgemäßes Fitnessangebot ein Instrument für langfristige Mitarbeiterbindung.",
  },
  {
    icon: "t",
    title: "Employer Branding",
    description:
      "Ein innovatives Sportkonzept mit Pixformance wirkt sich nicht nur positiv auf die Mitarbeiter, sondern auch Arbeitgeberattraktivität und damit auf potentielle Arbeitnehmer aus.",
  },
  {
    icon: "t (1)",
    title: "Weniger Fehlzeiten und Kosten",
    description:
      "Sportlich aktive Mitarbeitern fehlen durchschnittlich 2 – 6 Tage weniger pro Jahr. Unternehmen reduzieren mit Pixformance Krankheitskosten.",
  },
  {
    icon: "t (2)",
    title: "Mehr Flexibilität und Training",
    description:
      "Durch das computergestützte Pixformance Trainingskonzept können mehrere Mitarbeiter – gleichzeitig und ohne Trainer – betreut werden.",
  },
  {
    icon: "11",
    title: "Keine Administration und große Wirkung",
    description:
      "Auf der Online Plattform können Mitarbeiter selbständig individuelle Trainingspläne aus über 600 funktionellen Übungen zusammenstellen.",
  },
];

const performanceBenefits = [
  {
    icon: "refresh-cw",
    title: "Weniger Stress und mehr Flexibilität",
    description:
      "Zu viele Meetings und wenig Zeit? Mitarbeiter profitieren von der Möglichkeit – auch unbetreut – sicher, flexibel und individuell trainieren zu können.",
  },
  {
    icon: "smile",
    title: "Mehr Teamspirit, Motivation und Spaß",
    description:
      "Vor allem das Gruppentraining steigert die Motivation und das Gemeinschaftsgefühl, fördert die Gesundheit, Leistungsfähigkeit und Zufriedenheit der Mitarbeiter.",
  },
  {
    icon: "bar-chart",
    title: "Nachvollziehbare Ergebnisse",
    description:
      "Maßgeschneiderte Workouts können für jedes Fitnessniveau und Alter mit nur wenigen Handgriffen zugeschnitten und nachverfolgt werden.",
  },
];
---

<BaseLayout title="Digitale Fitnessgeräte fürs Büro – Pixformance">
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Breadcrumb Tabs -->
  <BreadcrumbTabs tabs={tabs} activeTab="/firmen-fitness" />

  <!-- Hero Section -->
  <section
    class="py-16 md:py-24 relative overflow-hidden bg-gradient-to-br from-background to-background-secondary"
  >
    <div class="container text-center max-w-4xl">
      <p
        class="text-lg md:text-xl text-foreground-muted mb-4 hero-animate"
        style="animation-delay: 0.1s;"
      >
        Betriebliches Gesundheitsmanagement
      </p>
      <h1
        class="font-display text-4xl md:text-6xl font-bold mb-6 hero-animate"
        style="animation-delay: 0.2s;"
      >
        Wir machen Ihr Team:<br />
        <span class="text-primary">Stärker. Besser. effizienter.</span>
      </h1>
      <p
        class="text-xl text-foreground-muted max-w-3xl mx-auto hero-animate"
        style="animation-delay: 0.3s;"
      >
        Pixformance als innovative Lösung für effiziente BGM-Maßnahmen und eine
        ganzheitliche Gesundheitsförderung – individuell für jeden Mitarbeiter.
      </p>
    </div>
  </section>

  <!-- WIE MIT EINEM TRAINER -->
  <section class="py-16 md:py-24 bg-background-secondary">
    <div class="container">
      <h2
        class="font-display text-4xl md:text-5xl font-bold mb-12 text-center uppercase"
        data-scroll="fade-up"
      >
        Wie mit einem Trainer
      </h2>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-6" data-scroll="slide-left">
          <p class="text-lg text-foreground-muted">
            Pixformance revolutioniert das Functional Training: Die patentierte
            Pixformance Station vermisst auf Basis von 25 Gelenkpunkten
            sekundenschnell den Körper jedes Trainierenden, analysiert präzise
            die Bewegungsausführung und gibt digitales Feedback in Echtzeit –
            wodurch ein besonders effektives und sicheres funktionelles Training
            ermöglicht wird.
          </p>
          <p class="text-lg text-foreground-muted">
            Der Vorteil: Durch die Korrektur in Echtzeit können Ihre Mitarbeiter
            ein betreutes Training absolvieren – auch ohne, dass ein Trainer
            anwesend ist. Das Training wird dadurch noch effektiver.
          </p>
        </div>
        <div data-scroll="slide-right">
          <img
            src="/images/Pixformance-225402_BGM_Pixformance_Funktionelles-Training_Milon_Virtuelles-Training_Sport-im-Buero-bearbeitet.jpg"
            alt="Funktionelles Training im Büro"
            class="rounded-lg shadow-2xl w-full"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- VIRTUELLES PERSONAL TRAINING -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="text-center mb-12" data-scroll="fade-up">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4">
          Virtuelles personal training
        </h2>
        <p class="text-xl text-foreground-muted max-w-3xl mx-auto">
          Die Pixformance Station ermöglicht durchgehende Anleitung hinsichtlich
          Genauigkeit, Tempo und Präzision einer Übungsausführung und bietet
          somit viel Sicherheit für ein Funktionelles Training – wie mit einem
          Personal Trainer.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div class="space-y-6" data-scroll="slide-left">
          <div class="flex gap-4">
            <div class="text-4xl font-bold text-primary shrink-0">1</div>
            <div>
              <h3 class="font-bold text-xl mb-2">Einfache Übungsanleitung</h3>
              <p class="text-foreground-muted">
                Der Trainierende stellt sich vor die Pixformance Station und die
                auszuführende Übung wird von einem Trainer auf dem Bildschirm
                vorgeführt.
              </p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="text-4xl font-bold text-primary shrink-0">2</div>
            <div>
              <h3 class="font-bold text-xl mb-2">Präzise Bewegungsanalyse</h3>
              <p class="text-foreground-muted">
                Während der Übungsausführung scannt eine Kamera mit eingebautem
                Tiefensensor sekundenschnell 25 Gelenkpunkte des Trainierenden
                und analysiert die Bewegungen.
              </p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="text-4xl font-bold text-primary shrink-0">3</div>
            <div>
              <h3 class="font-bold text-xl mb-2">Feedback in Echtzeit</h3>
              <p class="text-foreground-muted">
                Der virtuelle Trainer gibt Feedback in Echtzeit. So ist
                sichergestellt, dass die Übungen richtig und sicher ausgeführt
                werden – wie unter Anleitung eines Trainers.
              </p>
            </div>
          </div>
        </div>

        <div data-scroll="slide-right">
          <img
            src="/images/Pixformance-Station-2D-Funktionelles-Training-Digital-voll-vernetzt-BGM_Firmenfitness-Personal-Trainer.png"
            alt="Pixformance Station"
            class="rounded-lg shadow-2xl w-full"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- AUF IHRE ZIELE AUSGERICHTET -->
  <section class="py-16 md:py-24 bg-background-secondary">
    <div class="container">
      <div class="text-center mb-12" data-scroll="fade-up">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 uppercase">
          Auf Ihre Ziele ausgerichtet
        </h2>
        <p class="text-xl text-foreground-muted max-w-3xl mx-auto">
          Ein Großteil der Arbeitnehmer wünscht sich Sportangebote von ihrem
          Arbeitgeber. Pixformance bietet als Functional Training
          Trainingskonzept für Firmenfitness viele Vorteile gegenüber
          herkömmlichen BGM Trainingsansätzen.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          benefits.map((benefit, index) => (
            <Card
              variant="elevated"
              padding="lg"
              data-scroll="fade-up"
              data-delay={Math.min(index + 1, 6)}
            >
              <div class="flex flex-col gap-4">
                <div
                  class={`w-12 h-12 rounded-lg flex items-center justify-center ${index % 2 === 0 ? "bg-[#02308C]" : "bg-[#6BDBD1]"}`}
                >
                  <img
                    src={`/images/new-icons-bgm/${benefit.icon}.svg`}
                    alt={benefit.title}
                    class="w-8 h-8 object-contain"
                    style={
                      index % 2 === 0 ? "filter: brightness(0) invert(1);" : ""
                    }
                  />
                </div>
                <h3 class="font-bold text-xl">{benefit.title}</h3>
                <p class="text-foreground-muted">{benefit.description}</p>
              </div>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- KONTAKT / BERATUNG -->
  <section class="py-16 md:py-24" style="background-color: #4a3d91;">
    <div class="container">
      <Card variant="elevated" padding="lg" class="bg-white">
        <div class="grid md:grid-cols-5 gap-8 items-center">
          <div class="md:col-span-2 text-center">
            <img
              src="/images/Tobias-Baader-Beratung-2021-2.png.webp"
              alt="Tobias Baader"
              class="w-48 h-48 rounded-full object-cover mx-auto mb-4"
              loading="lazy"
            />
            <p class="text-sm text-foreground-muted">Ihr Ansprechpartner</p>
            <h3 class="font-bold text-2xl">Tobias Baader</h3>
          </div>

          <div class="md:col-span-3">
            <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
              Sie wünschen eine individuelle beratung?
            </h2>
            <Button size="lg" href="/testen">
              SCHREIBEN SIE UNS
              <Icon name="arrow-right" size="sm" />
            </Button>
          </div>
        </div>
      </Card>
    </div>
  </section>

  <!-- TRAININGSKONZEPTE -->
  <section class="py-16 md:py-24">
    <div class="container max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 uppercase">
          Trainingskonzepte
        </h2>
        <p class="text-xl text-foreground-muted max-w-3xl mx-auto">
          Wir bieten Lösungen für Unternehmen in den verschiedensten
          Situationen. Zusammen arbeiten wir ein Konzept mit Ihnen aus, welches
          Ihre Ansprüche und Anforderungen widerspiegelt und genauestes auf Ihre
          Bedürfnisse abgestimmt ist.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- EINZELTRAINING -->
        <Card variant="outline" padding="lg">
          <h3 class="font-bold text-2xl mb-4 uppercase">01 Einzeltraining</h3>
          <p class="text-foreground-muted mb-6">
            Mit einer Pixformance Station können Mitarbeiter ein
            maßgeschneidertes Personal Training bei einem virtuellen Trainer in
            Anspruch nehmen.
          </p>

          <div class="space-y-4">
            <details class="group border-b border-border pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                TRAININGSKONZEPTE
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4 space-y-4 text-foreground-muted">
                <div>
                  <p class="font-semibold mb-2">ZWISCHENDURCH:</p>
                  <p>
                    Die Pixformance Station wird mit einem vorinstallierten
                    Trainingsprogramm in den Büroräumen flexibel aufgestellt.
                    Damit ist auch ein Training – ohne Trainer – in Bürokleidung
                    zwischendurch möglich.
                  </p>
                </div>

                <div>
                  <p class="font-semibold mb-2">INTENSIV:</p>
                  <p>
                    Der Trainierende bekommt ein maßgeschneidertes Pixformance
                    Training von einem Trainer zusammengestellt und wird in das
                    Training mit Pixformance eingewiesen. Die Station wird von
                    dem Mitarbeiter über ein Booking Tool für das Zeitfenster
                    reserviert. In regelmäßigen Abständen (ca. 1 x im Monat)
                    überprüft der Trainer die Trainingsergebnisse auf der Online
                    Plattform und passt das Training in persönlichen Gesprächen
                    an die Trainingsentwicklung an.
                  </p>
                </div>

                <div>
                  <p class="font-semibold mb-2">ERGÄNZEND:</p>
                  <p>
                    Die Pixformance Station, ergänzend zu einem bestehenden
                    Gerätezirkel, an der funktionelle Übungen ausgeführt werden
                    können.
                  </p>
                </div>
              </div>
            </details>

            <details class="group border-b border-border pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                DETAILS
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4 space-y-2 text-foreground-muted text-sm">
                <p class="font-semibold mb-3">
                  Als 1:1 Training vor der Station oder als Ergänzung in ein
                  bestehendes Trainingskonzept
                </p>
                <p><strong>Benötigter Platz:</strong> Ca. 6 m²</p>
                <p><strong>Gewicht:</strong> 65 kg</p>
                <p><strong>Kamera:</strong> 2D Full HD</p>
                <p>
                  <strong>Rechner und Screen:</strong> Getrennt ein- und ausschaltbar
                </p>
                <p>
                  <strong>Touch-Screen:</strong> 49 Zoll Touch Display, Standardübungen
                  und Trainingsprogramme per Touch direkt auswählbar
                </p>
                <p>
                  <strong>Trainingsabstand:</strong> Ca. 1,60 m bis 2,30 m von der
                  Station
                </p>
                <p>
                  <strong>Rahmenbedingungen:</strong> Stromanschluss und Internetanschluss
                  (Ethernet, kein WLAN)
                </p>
                <p>
                  <strong>Equipment:</strong> Viele Übungen werden mit Equipment (z.
                  B. Kleinhanteln, Medizinbälle, Gymnastikball, Gymnastikband, Stock
                  etc.) angeboten. Ein Training ohne Kleingeräte ist möglich
                </p>
                <p>
                  <strong>Funktionsweise:</strong> Eine Übung oder ein Trainingsprogramm
                  wird einem QR-Codes zugewiesen. Wir stellen Ihnen eine unbegrenzte
                  Anzahl an QR-Codes für die Nutzung der Station bereit. Jeder Trainierende
                  hat die Möglichkeit, jederzeit mit einem vorprogrammierten oder
                  einem persönlichen Trainingsprogramm an einer freistehenden Station
                  trainieren zu können
                </p>
              </div>
            </details>

            <details class="group pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                VORTEILE
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4">
                <ul class="space-y-2 text-foreground-muted">
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span>Ein innovatives Highlight</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span>Auch in kleineren Büroräumen integrierbar</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span
                      >Durch die Feedbackfunktion können Mitarbeiter ein
                      betreutes Training absolvieren – auch ohne, dass ein
                      Trainer eine 1-zu-1 Betreuung übernimmt</span
                    >
                  </li>
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span
                      >Jeder Mitarbeiter hat die Möglichkeit, jederzeit mit
                      einem vorprogrammierten oder einem persönlichen
                      Trainingsprogramm an einer freistehenden Station
                      trainieren zu können</span
                    >
                  </li>
                </ul>
              </div>
            </details>
          </div>
        </Card>

        <!-- ZIRKELTRAINING -->
        <Card variant="outline" padding="lg">
          <h3 class="font-bold text-2xl mb-4 uppercase">02 Zirkeltraining</h3>
          <p class="text-foreground-muted mb-6">
            Bereits ab der Aufstellung von 3 Pixformance Stationen ist ein
            Zirkeltraining wie im Sport- und Fitnessbereich für Kleingruppen
            möglich.
          </p>

          <div class="space-y-4">
            <details class="group border-b border-border pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                TRAININGSKONZEPTE
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4 space-y-4 text-foreground-muted">
                <div>
                  <p class="font-semibold mb-2">INTENSIV:</p>
                  <p>
                    Der Trainierende bekommt ein maßgeschneidertes Pixformance
                    Training von einem Trainer zusammengestellt und wird in das
                    Training mit Pixformance eingewiesen. Die Station wird von
                    dem Mitarbeiter über ein Booking Tool für das Zeitfenster
                    reserviert. In regelmäßigen Abständen (ca. 1 x im Monat)
                    überprüft der Trainer die Trainingsergebnisse auf der Online
                    Plattform und passt das Training in persönlichen Gesprächen
                    an die Trainingsentwicklung an.
                  </p>
                </div>

                <div>
                  <p class="font-semibold mb-2">GRUPPENTRAINING:</p>
                  <p>
                    Bereits mit 3 Pixformance Stationen und 3 Zwischenstationen
                    (z. B. Matte, Stepper) ist ein betreutes Gruppentraining mit
                    6 Leuten und einem Trainer möglich.
                  </p>
                </div>
              </div>
            </details>

            <details class="group border-b border-border pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                DETAILS
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4 space-y-2 text-foreground-muted text-sm">
                <p class="font-semibold mb-3">
                  Als 1:1 Training vor der Station. Bereits ab 3 Stationen ist
                  ein betreutes Gruppentraining möglich. Ab 4 Stationen sind
                  Präventionskurse nach §20 möglich
                </p>
                <p>
                  <strong>Benötigter Platz:</strong> Ca. 6 m², verschiedene Anordnungsmöglichkeiten
                  je nach Raumsituation möglich (z. B. Reihe, Kreis, Stern)
                </p>
                <p><strong>Gewicht:</strong> 65 kg</p>
                <p><strong>Kamera:</strong> 2D Full HD</p>
                <p>
                  <strong>Rechner und Screen:</strong> Getrennt ein- und ausschaltbar
                </p>
                <p>
                  <strong>Touch-Screen:</strong> 49 Zoll Touch Display, Standardübungen
                  und Trainingsprogramme per Touch direkt auswählbar
                </p>
                <p>
                  <strong>Trainingsabstand:</strong> Ca. 1,60 m bis 2,30 m von der
                  Station
                </p>
                <p>
                  <strong>Rahmenbedingungen:</strong> Stromanschluss und Internetanschluss
                  (Ethernet, kein WLAN)
                </p>
                <p>
                  <strong>Equipment:</strong> Viele Übungen werden mit Equipment (z.
                  B. Kleinhanteln, Medizinbälle, Gymnastikball, Gymnastikband, Stock
                  etc.) angeboten. Ein Training ohne Kleingeräte ist möglich
                </p>
                <p>
                  <strong>Funktionsweise:</strong> Eine Übung oder ein Trainingsprogramm
                  wird einem QR-Codes zugewiesen. Wir stellen Ihnen eine unbegrenzte
                  Anzahl an QR-Codes für die Nutzung der Station bereit. Jeder Trainierende
                  hat die Möglichkeit, jederzeit mit einem vorprogrammierten oder
                  einem persönlichen Trainingsprogramm an einer freistehenden Station
                  trainieren zu können
                </p>
              </div>
            </details>

            <details class="group pb-4">
              <summary
                class="cursor-pointer list-none flex items-center justify-between font-semibold text-lg py-2"
              >
                VORTEILE
                <Icon
                  name="chevron-down"
                  size="sm"
                  class="transition-transform group-open:rotate-180"
                />
              </summary>
              <div class="pt-4">
                <ul class="space-y-2 text-foreground-muted">
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span>Ein innovatives Highlight</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span>Teambuilding im Gruppentraining</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <Icon
                      name="check"
                      size="sm"
                      class="text-success mt-1 shrink-0"
                    />
                    <span
                      >Individuelle Betreuung und maßgeschneiderte
                      Trainingspläne, auch in der Gruppe</span
                    >
                  </li>
                </ul>
              </div>
            </details>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- MEHR LEISTUNG DANK FUNCTIONAL TRAINING -->
  <section class="py-16 md:py-24 bg-background-secondary">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 uppercase">
          Mehr Leistung dank Functional Training
        </h2>
        <p class="text-xl text-foreground-muted max-w-3xl mx-auto">
          Durch das Echtzeitfeedback können Mitarbeiter mit dem virtuellen
          Trainer ihre Koordination, Kraft, Kondition und Mobilität verbessern,
          sowie den ganzen Körper besonders effektiv trainieren. Das fördert die
          Produktivität und Konzentration.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {
          performanceBenefits.map((benefit) => (
