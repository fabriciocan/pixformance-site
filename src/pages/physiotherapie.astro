---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderWithDropdown from '@/components/layout/HeaderWithDropdown.astro';
import Footer from '@/components/layout/Footer.astro';
import Button from '@/components/ui/form/Button/Button.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import PixformanceLogo from '@/components/PixformanceLogo.astro';
import BreadcrumbTabs from '@/components/ui/navigation/BreadcrumbTabs.astro';

const tabs = [
  { label: 'PHYSIOTHERAPIE', href: '/physiotherapie' },
  { label: 'KLINIK', href: '/klinik' },
  { label: 'FITNESS', href: '/fitness' },
  { label: 'BGM', href: '/firmen-fitness' },
];

const benefits = [
  {
    icon: 'monitor',
    title: '500+ Übungen – ein Gerät',
    description: 'Auf der Online Plattform können individuelle Trainingspläne aus einer Sammlung von über 500 funktionellen Übungen zusammengestellt werden.',
    gradient: 'from-[#02308C] to-[#6BDBD1]',
  },
  {
    icon: 'users',
    title: 'Zeitgleiche Betreuung',
    description: 'Dank der patentierten Software können mehrere Patienten gleichzeitig und ohne personellen Mehraufwand betreut werden.',
    gradient: 'from-[#6BDBD1] to-[#02308C]',
  },
  {
    icon: 'trending-up',
    title: 'Patienten werden Kunden',
    description: 'Individuelle Trainingseinheiten sowie Maßnahmen zur Sekundärprävention können als eine zusätzliche Einnahmequelle angeboten werden.',
    gradient: 'from-[#02308C] to-[#6BDBD1]',
  },
  {
    icon: 'table',
    title: 'Effiziente Verwaltung',
    description: 'Auf der Online Plattform wird der Trainingsverlauf jedes Patienten für eine Trainingsanalyse und -optimierung exakt dokumentiert.',
    gradient: 'from-[#6BDBD1] to-[#86C9BC]',
  },
  {
    icon: 'heart',
    title: 'Individuelles Training',
    description: 'Trainingsprogramme können auf den Gesundheitszustand und den Therapiebedarf jedes Patienten zugeschnitten werden.',
    gradient: 'from-[#86C9BC] to-[#02308C]',
  },
  {
    icon: 'zap',
    title: 'Zeit für das Wesentliche',
    description: 'Der Therapeut muss nicht jede Übung persönlich vormachen und spart Zeit – was wiederum der Betreuung aller Patienten zugutekommt.',
    gradient: 'from-[#02308C] to-[#6BDBD1]',
  },
];

const features = [
  {
    image: '/images/Pixformance-Live-Feedback-Digitales-Trainingsgeraet-Bewegungsanalyse-Korrektur-Physiotherapie-Training-mobil-1.gif',
    title: 'Einfache Übungsanleitung',
    description: 'Der Trainierende stellt sich vor die Pixformance Station und die auszuführende Übung wird von einem virtuellen Trainer auf dem Bildschirm vorgeführt.',
  },
  {
    image: '/images/Pixformance-Live-Feedback-Digitales-Trainingsgeraet-Bewegungsanalyse-Korrektur-Physiotherapie-Scanpunkte-2.gif',
    title: 'Präzise Bewegungsanalyse',
    description: 'Eine Kamera mit Tiefensensor scannt sekundenschnell 25 Gelenk- und 9 statische Punkte des Trainierenden und analysiert die Bewegungen.',
  },
  {
    image: '/images/Pixformance-Live-Feedback-Digitales-Trainingsgeraet-Bewegungsanalyse-Korrektur-Hinweis-2.gif',
    title: 'Feedback in Echtzeit',
    description: 'Die Pixformance Station gibt Feedback in Echtzeit. So ist sichergestellt, dass die Übungen richtig und sicher ausgeführt werden.',
  },
];

const testimonials = [
  {
    name: 'Heike Schaible',
    role: 'Inhaberin',
    company: 'Physiotherapie Praxis "Raum für Gesundheit"',
    image: '/images/heikeschaible.600x400.jpg',
    quote: 'Ich will mit Pixformance einen zweiten Selbstzahlerbereich aufbauen und damit vor allem meinen Mitarbeitenden entgegenkommen und ihnen eine einfachere und abwechslungsreichere Arbeit bieten.',
  },
  {
    name: 'Axel-André Richter',
    role: 'Inhaber',
    company: 'Gesundheitspraxis Richter & Lopez',
    image: '/images/Axel-Andre-Richter-und-Lopez-Pixformance.png',
    quote: 'Ich kann das neue Training ganz individuell für jeden unserer Patienten gestalten. Vom Leistungssportler bis zur Omi ist für jeden das Richtige dabei.',
  },
  {
    name: 'Volker Sutor',
    role: 'Inhaber',
    company: 'Physiotherapiezentren »Reha Rondell«',
    image: '/images/Pixformance-Volker-Sutor-Testimonial.png',
    quote: 'Ein gezieltes Gesundheitstraining mit dem virtuellen Trainer erhöht die Effizienz der Behandlung und schafft mehr Zeit für die eigentliche Betreuung meiner Patienten.',
  },
];
---

<BaseLayout
  title="Physiotherapie - Pixformance Sports GmbH"
  description="Digitale Bewegungstherapie mit Pixformance: Ein voll vernetztes Konzept für Ihre Physiotherapie-Praxis oder Ihr Reha-Zentrum"
>
  <HeaderWithDropdown slot="header" position="sticky">
    <PixformanceLogo slot="logo" />
  </HeaderWithDropdown>

  <!-- Breadcrumb Tabs -->
  <BreadcrumbTabs tabs={tabs} activeTab="/physiotherapie" />

  <!-- Hero Section -->
  <section class="relative bg-white overflow-hidden py-12 md:py-20">
    <div class="container">
      <div class="max-w-5xl mx-auto text-center space-y-5">
        <div class="inline-block hero-animate" style="animation-delay: 0.1s;">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] hover:bg-[#02308C]/20 hover:border-[#02308C]/30 transition-all duration-300 cursor-pointer">
            <Icon name="heart" size="sm" />
            Physiotherapie
          </span>
        </div>

        <h1 class="font-display text-xl md:text-xll lg:text-xl font-bold leading-tight hero-animate" style="animation-delay: 0.2s;">
          Digitale 
          <span class="text-[#02308C]"> Bewegungstherapie</span>
        </h1>

        <p class="text-2xl md:text-3xl font-bold text-[#02308C] hero-animate" style="animation-delay: 0.3s;">
          Physiotherapie von morgen: Digital versorgt, gesünder vernetzt
        </p>

        <p class="text-lg md:text-xl text-foreground-muted leading-relaxed max-w-3xl mx-auto hero-animate" style="animation-delay: 0.4s;">
          Keine Technik der Welt kann Therapeuten ersetzen. Die Digitalisierung in der Physiotherapie und Rehabilitation ist jedoch ein effektiver Weg, Therapeuten zu entlasten und Patienten noch intensiver zu betreuen.
        </p>

        <div class="flex flex-col sm:flex-row flex-wrap gap-4 justify-center pt-2 hero-animate" style="animation-delay: 0.5s;">
          <Button
            size="lg"
            href="/testen"
            class="group hover:shadow-lg hover:scale-105 transition-all duration-300"
          >
            Jetzt beraten lassen
            <Icon name="arrow-right" size="sm" class="group-hover:translate-x-2 transition-transform duration-300" />
          </Button>
          <Button
            size="lg"
            variant="outline"
            href="/konzept"
            class="group hover:shadow-lg hover:scale-105 transition-all duration-300"
          >
            Mehr erfahren
            <Icon name="play-circle" size="sm" class="group-hover:scale-110 transition-transform duration-300" />
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-center">
        <div class="space-y-6" data-scroll="slide-left">
          <div class="inline-block">
            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C]">
              <Icon name="target" size="sm" />
              Unsere Mission
            </span>
          </div>

          <h2 class="font-display text-3xl md:text-5xl font-bold leading-tight">
            Therapeuten befähigen, Patienten begeistern
          </h2>

          <p class="text-lg text-foreground-muted leading-relaxed">
            Unsere Mission ist es – mit der besten Technologie für digitale Bewegungsanalyse – eine individuelle Lösung für Therapeuten und deren ganz spezielle Patienten zu kreieren.
            Die digitale Bewegungstherapie von Pixformance entlastet bei der Übungsanleitung und begleitet Patienten somit höchst effektiv auf dem Genesungsweg.
          </p>

        </div>

        <div class="relative" data-scroll="slide-right">
          <img
            src="/images/Pixformance-Physiotherapie-Digitalisierung-Digitales-Trainingsgeraet-Spass-Beim-Training.png"
            alt="Pixformance Physiotherapie Training"
            class="rounded-2xl shadow-xl w-full h-auto"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Echtzeit-Korrektur Highlight -->
  <section class="py-20 bg-[#02308C] relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute -top-20 -right-20 w-80 h-80 rounded-full bg-white/5 pointer-events-none"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-white/5 pointer-events-none"></div>
    <div class="absolute top-1/2 right-1/3 w-40 h-40 rounded-full bg-[#6BDBD1]/10 pointer-events-none"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto text-center space-y-6" data-scroll="fade-up">

        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 border border-white/20 text-sm font-bold text-[#6BDBD1]">
          <Icon name="zap" size="sm" />
          Live-Technologie
        </span>

        <h2 class="font-display text-4xl md:text-6xl font-bold text-white leading-tight">
          Echtzeit-Korrektur
        </h2>

        <p class="text-xl text-white/70 max-w-2xl mx-auto">
          Präzises Feedback während der Übungsausführung.
        </p>


      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container">
      <div class="text-center mb-14" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="sparkles" size="sm" />
          Korrektur in Echtzeit
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold">
          Wie funktioniert das Training?
        </h2>
        <p class="text-lg text-foreground-muted mt-4 max-w-3xl mx-auto">
          Die Pixformance Station ermöglicht durchgehende Anleitung hinsichtlich Genauigkeit, Tempo sowie Präzision einer Übungsausführung.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        {features.map((feature, index) => (
          <div
            class="group flex flex-col"
            data-scroll="fade-up"
            data-delay={index + 1}
          >
            <!-- Step number -->
            <div class="flex items-center gap-3 mb-4">
              <span class="text-5xl font-bold text-[#02308C]/10 leading-none select-none">
                {String(index + 1).padStart(2, '0')}
              </span>
              <div class="h-px flex-1 bg-[#02308C]/10"></div>
            </div>

            <!-- GIF container — flex-1 makes all same height, object-contain shows full image -->
            <div class="flex-1 rounded-2xl overflow-hidden bg-gray-50 shadow-md group-hover:shadow-xl transition-shadow duration-500 mb-5 flex items-center justify-center">
              <img
                src={feature.image}
                alt={feature.title}
                class="w-full h-full object-contain block"
                loading="lazy"
              />
            </div>

            <!-- Text -->
            <h3 class="font-bold text-lg mb-2 group-hover:text-[#02308C] transition-colors duration-300">
              {feature.title}
            </h3>
            <p class="text-sm text-foreground-muted leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 md:py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-8" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="star" size="sm" />
          Vorteile
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4">
          Wirtschaftlich autonom dank Selbstzahlerbereich
        </h2>
        <p class="text-lg text-foreground-muted max-w-3xl mx-auto">
          Pixformance gibt Therapeuten die Möglichkeit, den Selbstzahlerbereich und damit ein zusätzliches Standbein im zweiten Gesundheitsmarkt aufzubauen oder zu erweitern.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit, index) => (
          <Card
            variant="elevated"
            padding="lg"
            class="hover:shadow-xl transition-all duration-500 hover:-translate-y-2 group bg-white"
            data-scroll="fade-up"
            data-delay={index + 1}
          >
            <div class={`w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 ${index % 2 === 0 ? 'bg-[#02308C]' : 'bg-[#6BDBD1]'}`}>
              <Icon name={benefit.icon} size="md" class="text-white" />
            </div>
            <h3 class="font-bold text-lg mb-2 group-hover:text-[#02308C] transition-colors">
              {benefit.title}
            </h3>
            <p class="text-sm text-foreground-muted">
              {benefit.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Individuelle Lösung Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container">
      <div class="text-center mb-14 max-w-3xl mx-auto" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="layout" size="sm" />
          Flexibilität
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4">
          Ihre individuelle Lösung
        </h2>
        <p class="text-lg text-foreground-muted leading-relaxed">
          Mit Pixformance haben Sie maximale Flexibilität. Sie können Ihre Patienten über das Rezept hinaus zu gesunden, treuen und zahlenden Kunden transformieren und Ihre Einrichtung mit digitaler, innovativer Trainingsausstattung auf ein ganz neues Level heben.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 items-stretch">

        <!-- Card 1 Station -->
        <div class="flex flex-col rounded-2xl border border-gray-200 bg-white shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden" data-scroll="fade-up" data-delay="1">
          <div class="bg-gray-50 px-6 pt-8 pb-6 border-b border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-[#02308C] flex items-center justify-center mb-4">
              <Icon name="monitor" size="md" class="text-white" />
            </div>
            <div class="text-5xl font-bold text-[#02308C] leading-none mb-1">1</div>
            <h3 class="text-xl font-bold text-gray-900">Station</h3>
          </div>
          <div class="px-6 py-6 flex flex-col gap-3 flex-1">
            <p class="text-sm text-foreground-muted leading-relaxed">
              Schon mit einer Station ist ein Einzeltraining mit und ohne Therapeut in jedes bestehende Praxiskonzept integrierbar.
            </p>
            <ul class="space-y-2 mt-2">
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Für 1–2 Trainierende
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Für kleinere und mittelgroße Praxen mit begrenztem Platz
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Benötigt nur ca. 6 m² Fläche
              </li>
            </ul>
          </div>
        </div>

        <!-- Card 2 Stationen — destaque -->
        <div class="flex flex-col rounded-2xl bg-[#02308C] shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden ring-2 ring-[#6BDBD1]" data-scroll="fade-up" data-delay="2">
          <div class="px-6 pt-8 pb-6 border-b border-white/10">
            <div class="w-12 h-12 rounded-xl bg-white/15 flex items-center justify-center mb-4">
              <Icon name="users" size="md" class="text-white" />
            </div>
            <div class="text-5xl font-bold text-[#6BDBD1] leading-none mb-1">2</div>
            <h3 class="text-xl font-bold text-white">Stationen</h3>
          </div>
          <div class="px-6 py-6 flex flex-col gap-3 flex-1">
            <p class="text-sm text-white/70 leading-relaxed">
              Schon mit zwei Stationen sind Einzeltrainings sowie das Training in der Kleingruppe möglich.
            </p>
            <ul class="space-y-2 mt-2">
              <li class="flex items-start gap-2 text-sm text-white/90">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Für bis zu 4 Trainierende
              </li>
              <li class="flex items-start gap-2 text-sm text-white/90">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Für mittelgroße Praxen
              </li>
              <li class="flex items-start gap-2 text-sm text-white/90">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Benötigt nur ca. 20 m² Fläche
              </li>
            </ul>
          </div>
        </div>

        <!-- Card 3+ Stationen -->
        <div class="flex flex-col rounded-2xl border border-gray-200 bg-white shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden" data-scroll="fade-up" data-delay="3">
          <div class="bg-gray-50 px-6 pt-8 pb-6 border-b border-gray-100">
            <div class="w-12 h-12 rounded-xl bg-[#6BDBD1] flex items-center justify-center mb-4">
              <Icon name="trending-up" size="md" class="text-white" />
            </div>
            <div class="text-5xl font-bold text-[#02308C] leading-none mb-1">3+</div>
            <h3 class="text-xl font-bold text-gray-900">Stationen</h3>
          </div>
          <div class="px-6 py-6 flex flex-col gap-3 flex-1">
            <p class="text-sm text-foreground-muted leading-relaxed">
              Ab drei Stationen sind abwechslungsreiche Einzeltrainings sowie Gruppenkurse als eigenes innovatives Trainingskonzept möglich.
            </p>
            <ul class="space-y-2 mt-2">
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Ab 5 Trainierenden
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Für mittlere bis große Einrichtungen
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-700">
                <Icon name="check" size="sm" class="text-[#6BDBD1] mt-0.5 flex-shrink-0" />
                Integrierbar ab ca. 30 m² Fläche
              </li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="text-center mb-8" data-scroll="fade-up">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#02308C]/10 border border-[#02308C]/20 text-sm font-bold text-[#02308C] mb-6">
          <Icon name="message-circle" size="sm" />
          Erfolgsgeschichten
        </span>
        <h2 class="font-display text-4xl md:text-5xl font-bold">
          Was unsere Kunden sagen
        </h2>
        <p class="text-lg text-foreground-muted mt-4">
          Mit über 450.000 Trainierenden weltweit findet sich das Pixformance Trainings- und Therapiekonzept bereits in den Top-Rehakliniken Deutschlands
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <Card
            variant="elevated"
            padding="lg"
            class="bg-white hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 group relative overflow-hidden"
            data-scroll="scale"
            data-delay={index + 1}
          >
            <div class="absolute inset-0 bg-gradient-to-br from-[#02308C]/0 to-[#6BDBD1]/0 group-hover:from-[#02308C]/5 group-hover:to-[#6BDBD1]/5 transition-all duration-500"></div>

            <div class="relative space-y-4">
              <div class="flex items-center gap-3">
                <div class="relative">
                  <div class="absolute inset-0 bg-[#02308C] rounded-full blur-lg opacity-0 group-hover:opacity-60 transition-opacity duration-500"></div>
                  <img
                    src={testimonial.image}
                    alt={testimonial.name}
                    class="relative w-16 h-16 rounded-full object-cover ring-2 ring-white shadow-lg group-hover:scale-110 group-hover:rotate-3 transition-all duration-500"
                    loading="lazy"
                  />
                </div>
                <div>
                  <div class="font-bold group-hover:text-[#02308C] transition-colors duration-300">{testimonial.name}</div>
                  <div class="text-sm text-foreground-muted">{testimonial.role}</div>
                  <div class="text-sm text-[#02308C] font-semibold">{testimonial.company}</div>
                </div>
              </div>

              <div class="relative">
                <Icon name="quote" size="lg" class="text-[#6BDBD1]/20 absolute -top-1 -left-1" />
                <p class="text-sm text-foreground-muted italic leading-relaxed pl-6 relative">
                  "{testimonial.quote}"
                </p>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, #6BDBD1 80%, white 100%)"></div>

    <div class="container relative">
      <div class="max-w-4xl mx-auto text-center space-y-8" data-scroll="fade-up">
        <h2 class="font-display text-4xl md:text-6xl font-bold text-white leading-tight">
          Sie wünschen eine individuelle Beratung?
        </h2>

        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Viele Fragen lassen sich persönlich einfach schneller klären. Wir freuen uns über Ihre Nachricht!
        </p>

        <div class="flex flex-wrap gap-4 justify-center pt-4">
          <Button
            size="lg"
            href="/testen"
            class="bg-black text-white hover:bg-black/80"
          >
            Jetzt Kontakt aufnehmen
            <Icon name="arrow-right" size="sm" />
          </Button>
          <Button
            size="lg"
            variant="outline"
            href="/konzept"
            class="border-2 border-black text-black hover:bg-black hover:text-white"
          >
            Mehr über unsere Lösungen
          </Button>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero Entry Animation */
  @keyframes hero-entry {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-animate {
    opacity: 0;
    animation: hero-entry 0.8s ease-out forwards;
  }

  /* Scroll Animation Styles */
  [data-scroll] {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  [data-scroll].is-visible {
    opacity: 1;
  }

  /* Fade In Up */
  [data-scroll="fade-up"] {
    transform: translateY(30px);
  }

  [data-scroll="fade-up"].is-visible {
    transform: translateY(0);
  }

  /* Slide In Left */
  [data-scroll="slide-left"] {
    transform: translateX(-40px);
  }

  [data-scroll="slide-left"].is-visible {
    transform: translateX(0);
  }

  /* Slide In Right */
  [data-scroll="slide-right"] {
    transform: translateX(40px);
  }

  [data-scroll="slide-right"].is-visible {
    transform: translateX(0);
  }

  /* Scale In */
  [data-scroll="scale"] {
    transform: scale(0.9);
  }

  [data-scroll="scale"].is-visible {
    transform: scale(1);
  }

  /* Stagger delays */
  [data-scroll][data-delay="1"] {
    transition-delay: 0.1s;
  }

  [data-scroll][data-delay="2"] {
    transition-delay: 0.2s;
  }

  [data-scroll][data-delay="3"] {
    transition-delay: 0.3s;
  }

  [data-scroll][data-delay="4"] {
    transition-delay: 0.4s;
  }

  [data-scroll][data-delay="5"] {
    transition-delay: 0.5s;
  }

  [data-scroll][data-delay="6"] {
    transition-delay: 0.6s;
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  // Observe all elements with data-scroll attribute
  document.querySelectorAll('[data-scroll]').forEach((el) => {
    observer.observe(el);
  });
</script>
